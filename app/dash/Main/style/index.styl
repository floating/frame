.requestFeature
  padding 0px 0px 0px 0px
  display flex
  justify-content center
  align-items center

  .requestFeatureButton:active
    transform translateY(0px)
    box-shadow 0px 1px 2px var(--ghostY)
    background var(--ghostAZ)

  .requestFeatureButton:hover
    transform translateY(-1px)
    box-shadow 0px 4px 8px var(--ghostY)
    background var(--ghostA)

  .requestFeatureButton
    padding 0px 30px
    border-radius 26px
    height 74px
    font-size 14px
    display flex
    justify-content center
    align-items center
    width 294px
    margin-bottom 8px
    font-weight 400
    cursor pointer
    box-sizing border-box
    background var(--ghostAZ)
    border-bottom 2px solid var(--ghostZ)
    box-shadow 0px 2px 4px var(--ghostY)
    *
      pointer-events none

  .requestFeatureButtonMoon
    color var(--moon)

  .requestFeatureButtonGood
    color var(--good)

.snipIt
  display flex
  flex-direction column
  justify-content center
  align-items center
  transform translateZ(0)
  padding 0px 10px
  font-size 13px
  font-weight 400
  font-family 'MainFont'
  position relative
  z-index 1
  line-height 22px
  margin-bottom 32px
  margin-top 32px

  @keyframes spin
    0% 
      transform rotate(0deg)
    100%
      transform rotate(360deg)

  @keyframes spinReverse
    0% 
      transform rotate(0deg)
    100%
      transform rotate(-360deg)

  .snipItBrowserExtensionIcons
    display flex
    justify-content center
    align-items center
    padding 10px
    width 100%
    
    .snipItBrowserExtensionIcon:active
      transform translateY(0px)
      box-shadow 0px 1px 2px var(--ghostY)
      background var(--ghostA)

    .snipItBrowserExtensionIcon:hover
      transform translateY(-1px)
      box-shadow 0px 4px 8px var(--ghostY)
      background var(--ghostA)

    .snipItBrowserExtensionIcon
      display flex
      justify-content center
      align-items center
      height 74px
      width 74px
      border-radius 26px
      margin 8px
      cursor pointer
      background var(--ghostAZ)
      border-bottom 2px solid var(--ghostZ)
      box-shadow 0px 2px 4px var(--ghostY)

      *
        pointer-events none

