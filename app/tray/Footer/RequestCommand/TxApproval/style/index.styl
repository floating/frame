._txActionButton
  background var(--ghostA)
  box-sizing border-box
  height 60px
  margin 1px
  flex 1
  cursor pointer
  display flex
  justify-content center
  align-items center
  padding-top 3px
  box-sizing border-box
  // font-size 12px
  transition var(--standard)
  font-family 'MainFont'
  transform translateY(0px) 
  text-transform uppercase
  // background var(--ghostA)
  // box-shadow 0px 1px 2px var(--ghostY)
  // border-bottom 1px solid var(--ghostZ)
  flex-grow 1

._txActionButton:hover
  background var(--ghostB)
  transform translateY(-1px)
  box-shadow 0px 3px 4px var(--ghostY)

._txActionButton:active
  background var(--ghostA)
  transform translateY(1px)
  box-shadow 0px 1px 0px var(--ghostY)

._txActionButtonGood
  color var(--good)

._txActionButtonBad
  color var(--bad)

