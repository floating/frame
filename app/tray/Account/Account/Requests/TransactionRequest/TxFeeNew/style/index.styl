._txFeeBar
  font-size 17px
  font-weight 400
  display flex
  justify-content center
  align-items center
  border-radius 12px
  display flex
  justify-content center
  align-items center
  -webkit-app-region no-drag
  transition none
  pointer-events auto
  transform translate3d(0, 0, 0)
  font-family 'MainFont'
  padding 0px
  background var(--ghostA)
  margin-top 5px
  cursor pointer
  flex-grow 1

  *
    pointer-events none

  svg
    position relative
    top -0px
    padding 0px 3px 0px 4px

._txFeeGwei
  cursor pointer
  transform translateY(0px)
  display flex
  justify-content center
  align-items center
  padding 20px

  *
    pointer-events none

  ._txFeeGweiValue
    font-weight 300
    font-size 23px
    display flex
    align-items center
    justify-content center
    position relative
    top -1px
    
  ._txFeeGweiLabel
    display flex
    align-items center
    justify-content center
    font-family 'MainFont'
    padding-left 4px
    position relative
    top 0px
    font-weight 500
    font-size 11px
    text-transform uppercase

