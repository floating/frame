.accountView
  position absolute
  top 140px
  right 8px
  bottom 40px
  left 8px
  border-radius 30px
  z-index 4
  display flex
  justify-content center
  align-items center
  transition var(--standard)
  display flex
  justify-content center
  align-items center
  overflow hidden

  .accountViewMenu
    position absolute
    top 6px
    right 6px
    left 6px
    height 53px
    border-radius 26px
    box-shadow 0px 2px 4px var(--ghostY)
    z-index 59999999
    background var(--ghostA)

    border-bottom 2px solid var(--ghostZ)
    box-sizing border-box

    .accountViewTitle
      position absolute
      top 0
      right 0
      bottom 0
      left 0px
      display flex
      justify-content center
      align-items center
      text-transform uppercase
      letter-spacing 2px
      font-weight 500
      pointer-events none
      font-family 'MainFont'

      .accountViewIcon
        pointer-events none
        transform translate3d(0, 0, 0)
        position relative
        top 2px

      .accountViewText
        font-size 12px

    .accountViewBack
      position absolute
      top 5px
      left 5px
      height 42px
      width 54px
      border-radius 159px
      display flex
      justify-content center
      align-items center
      -webkit-app-region no-drag
      transition none
      pointer-events auto
      transform translate3d(0, 0, 0)
      background var(--ghostB)
      cursor pointer
      border 3px solid var(--ghostZ)
      box-sizing border-box
      *
        pointer-events none

    .accountViewBack:hover
      background var(--ghostC)

  .accountViewMain
    position absolute
    top 0px
    right 0px
    left 0px
    bottom 0px
    animation-delay 0.08s
    z-index 3
    padding-top 30px
