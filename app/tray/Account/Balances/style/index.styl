    //   line-height 13px
    //   position relative
    //   letter-spacing 0.5px
    //   margin-top -0.12em
    //   margin-right 0.36em

  .signerBalanceEquivalent
    position absolute
    right 7px
    bottom 5px
    font-size 12px
    color var(--outerspace05)
    display flex
    align-items center
    font-family 'FiraCode'

.signerBalanceSliderDisplay
  position absolute
  top 0
  left 0
  right 0
  transition none

.signerBalanceSliderShadow
  position relative
  opacity 0

.signerBalanceNoTokens
  height 48px
  display flex
  justify-content center
  align-items center
  color var(--outerspace08)
  text-transform uppercase
  font-size 12px
  border-bottom 1px solid var(--ghostA)

.moduleLoading
  height 40px
  display flex
  justify-content center
  align-items center
  padding 20px
  border-bottom 1px solid var(--ghostA)
  margin 0px 16px

.moduleLoadingLoader
  border-radius 50%
  width 30px
  height 30px
  margin 30px auto
  font-size 10px
  position relative
  text-indent -9999em
  border-top 3px solid var(--ghostZ)
  border-right 3px solid var(--ghostZ)
  border-bottom 3px solid var(--ghostZ)
  border-left 3px solid var(--good)
  transform translateZ(0)
  animation load 0.5s infinite linear
  will-change transform

@keyframes load
  0%
    -webkit-transform rotate(0deg)
    transform rotate(0deg)

  100%
    -webkit-transform rotate(360deg)
    transform rotate(360deg)


.showHiddenTokens
  padding 10px 0px 8px 0px
  display flex
  justify-content center
  text-transform uppercase
  font-size 12px
  color var(--mint)
  font-weight 400
  svg
    color var(--moon)
  span
    margin-left 8px

.showHiddenTokens:hover
  svg
    color var(--mint)
  
.signerBalanceFooter
  margin-top 24px
  display flex
  justify-content center
  align-items center

  .signerBalanceFooterButton
    height 40px
    background var(--ghostA)
    border-bottom 2px solid var(--ghostZ)
    box-shadow 0px 1px 4px var(--ghostX)
    border-radius 20px
    box-sizing border-box
    cursor pointer
    z-index 4000
    display flex
    justify-content center
    align-items center
    font-size 11px
    font-weight 400
    letter-spacing 1px
    text-transform uppercase
    padding 1px 20px 0px 21px

    *
      pointer-events none
      margin-left 2px

  .signerBalanceFooterButton:hover
    background var(--ghostB)
    color var(--outerspace)
    // color var(--good)
