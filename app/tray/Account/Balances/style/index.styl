.balancesBlock
  box-sizing border-box
  overflow auto

.signerBalanceWarning
  position relative
  font-weight 400
  padding 4px 0px

.signerBalanceDrawerItem
  height 40px
  display flex
  justify-content center
  align-items center
  font-size 11px
  text-transform uppercase
  font-weight 600
  color var(--mint)

@keyframes wave
  0%
    transform translateX(0)
  100%
    transform translateX(74px)

.signerBalanceLoading
  position absolute
  right 16px
  bottom 12px
  height 24px
  width 90px
  box-sizing border-box
  display flex
  overflow hidden
  opacity 1
  padding 1px 0px
  border-radius 12px
  background var(--ghostZ)
  border 6px solid var(--ghostZ)
  color var(--mint)
  
  svg
    width 300%
    position relative
    left -100%
    stroke-width 20px
    animation wave 3.4s linear infinite
    will-change transform

.signerBalancesExpanded
  width 100%

.signerBalancesWrap
  margin 0px 6px 6px 6px
  padding 2px 3px 1px 3px
  box-sizing border-box
  overflow auto
  background var(--ghostZ)
  border-radius 20px
  min-height 76px
  position relative
  z-index 999

  .signerBalance:first-child
    border-top-right-radius 17px
    border-top-left-radius 17px

  .signerBalance:last-child
    border-bottom-right-radius 17px
    border-bottom-left-radius 17px

  .signerBalance:first-child:last-child
    border-bottom-right-radius 17px

.signerBalanceWarningTitle
  position relative
  height 24px
  width 100%
  z-index 200000
  font-size 10px
  display flex
  justify-content center
  align-items center
  color var(--moon)
  text-transform uppercase
  pointer-events none

.signerBalanceWarningMessage
  position relative
  width 100%
  text-align center
  padding 8px 20px 12px 20px
  box-sizing border-box
  font-size 12px
  font-weight 300

.signerBalanceTotal
  position relative
  height 52px
  width 100%
  z-index 200000
  font-size 14px
  margin-bottom 16px

.signerBalanceButtons
  display flex
  justify-content left
  align-items center
  height 100%

  .moduleItemButton
    background var(--ghostA)
    box-shadow 0px 4px 6px var(--ghostY)
    border-bottom 2px solid var(--ghostZ)
    cursor pointer
    * 
      pointer-events none

  .moduleItemButton:hover
    background var(--ghostB)
    transform translateY(-1px)
    border-bottom 2px solid var(--ghostZ)
    box-shadow 0px 8px 30px -12px var(--ghostX)
    
  .moduleItemButton:active
    background var(--ghostB)
    transform translateY(0px)
    box-shadow 0px 2px 4px var(--ghostX)

.moreButton
  height 40px
  font-size 11px
  text-transform uppercase
  display flex
  justify-content center
  align-items center
  width 70px
  max-width 70px
  min-width 70px

.signerBalanceButton
  height 40px
  margin-left 13px
  background var(--ghostA)
  border-bottom 2px solid var(--ghostZ)
  box-shadow 0px 1px 4px var(--ghostX)
  border-radius 20px
  box-sizing border-box
  cursor pointer
  z-index 4000
  display flex
  justify-content center
  align-items center
  font-size 11px
  font-weight 400
  letter-spacing 1px
  text-transform uppercase
  padding 1px 20px 0px 21px

  *
    pointer-events none
    margin-left 2px

.signerBalanceButton:hover
  background var(--ghostB)
  color var(--outerspace)
  // color var(--good)

.signerBalanceTotalText
  position absolute
  left 16px
  right 23px
  bottom 0px
  top 0px
  display flex
  justify-content flex-end
  align-items center

  .signerBalanceTotalLabel
    margin-right 6px
    margin-top 1px
    text-transform uppercase
    font-size 10px
    letter-spacing 0.5px
    font-weight 600
    color var(--mint)

  .signerBalanceTotalValue
    font-size 16px
    font-family 'FiraCode'
    letter-spacing -1px
    text-align center
    display flex
    align-items center
    color var(--mint)

.signerBalancesLoading
  position absolute
  top 46px
  left 9px
  right 9px
  bottom 78px
  z-index 200
  border-radius 17px
  display flex
  justify-content center
  align-items center
  background var(--ghostA)

  .loader, .loader:after
    border-radius 100%
    width 22px
    height 22px

  .loader
    font-size 7px
    position relative
    text-indent -9999em
    border-top 3px solid var(--ghostZ)
    border-right 3px solid var(--ghostZ)
    border-bottom 3px solid var(--ghostZ)
    border-left 3px solid var(--ghostD)
    transform translateZ(0)
    animation load8 0.6s infinite linear !important
    will-change transform

.signerBalance
  position relative
  opacity 1
  width 100%
  transition 0.1s ease-out all
  font-family 'MainFont'
  overflow hidden

  @keyframes sheenLoad
    0%
      transform rotateZ(360deg) translateX(-100%)
    100%
      transform rotateZ(360deg) translateX(100%)

  // .signerBalanceLoading
  //   position absolute
  //   top 0
