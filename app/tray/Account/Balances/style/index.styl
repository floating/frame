  //   transition var(--standardFast)

  .signerBalanceInner
    position relative
    height 78px
    transition all linear 0.8s

  .signerBalanceMain
    position absolute
    left 67px
    top 25px
    right 18px
    bottom 26px
    font-size 16px
    display flex
    font-weight 300
    white-space nowrap
    align-items center
    z-index 2
    overflow hidden
    font-family 'FiraCode'
    // font-family 'MainFont'
    .signerBalanceCurrencyLine
      background var(--ghostY)
      height 1px
      margin 0px 12px 0px 12px
      flex 1

  .signerBalanceChain
    position absolute
    left 65px
    top 10px
    right 16px
    font-size 10px
    display flex
    align-items center
    font-weight 600
    white-space nowrap
    z-index 2
    text-transform uppercase
    letter-spacing 1px
    height 12px
    padding 0px 0px 0px 2px
    color var(--mint)
    span
      margin-right 4px

  .signerBalancePrice
    position absolute
    right 20px
    bottom 10px
    left 68px
    font-size 12px
    font-weight 400
    color var(--mint)
    display flex
    align-items center
    justify-content space-between
    font-family 'FiraCode'

  .signerBalanceOk
    display flex
    align-items center
    justify-content center

  .signerBalanceCurrentValue
    display flex
    align-items center

  .signerBalanceCurrentPrice
    display flex
    align-items center
    margin-left -2px

  .signerBalanceCurrentPriceChange
    display flex
    align-items center
    margin-left 4px

  .signerBalanceCurrentPriceChangeUp
    color var(--good)

  .signerBalanceCurrentPriceChangeDown
    color var(--bad)

  .signerBalanceChainIcon
    position absolute
    left -6px
    top 9px
    height 16px
    width 16px
    background var(--foreverwhite)
    border-radius 16px
    overflow hidden
    z-index 2
    color black
    box-shadow 0px 0px 2px var(--ghostA)

  .signerBalanceIcon
    position absolute
    left 15px
    top 22px
    border-radius 16px
    overflow hidden
    z-index 1

    img:before
      content attr(alt)
      top 0
      bottom 0
      left 0
      right 0
      border-radius 16px
      position absolute
      background var(--outerspace)
      color var(--ghostZ)
      display flex
      justify-content center
      align-items center
      font-size 11px
      font-weight 300
      letter-spacing -0.5px
      margin-left -0.5px
     
    img
      height 30px
      width 30px
      border-radius 16px
      position absolute
      overflow hidden

  .signerBalanceValue
    position absolute
    right 16px
    top 30px
    font-size 18px
    text-align center
    display flex
    align-items center
    font-family 'FiraCode'
    font-weight 300
    font-family 'VCR'

    // .displayValueSymbol
    //   font-family 'MainFont'
    //   font-weight 600
