.txAdjustFee
  padding-top 64px
  
  input
    outline 0
    border 0
    background var(--ghostC)
    color var(--outerspace)
    text-align center
    width 200px
    font-size 21px
    margin 5px 25px
    height 30px
    border-radius 12px
    font-family 'FiraCode'
    transition var(--standardFast)
    box-shadow 0px 0px 0px var(--ghostA)

  input:focus
    transform scale(1.2) translateY(-2px)
    box-shadow 0px 10px 20px var(--ghostA)

  // input:focus::selection
  //   background var(--moonHighlight)

  .txFeeOverlayInset
    max-height 100%
    width 100%
    overflow-x hidden
    overflow-y scroll

  .txFeeOverlayType
    width 100%
    display none

  .txFeeOverlayEstimate
    width 100%
    disaply none

  .txFeeOverlayBaseFee
    width 100%

  .txFeeOverlayPriorityFee
    width 100%

  .txFeeOverlayLimit
    width 100%

  .txFeeOverlayInput
    display flex
    justify-content center

  .txFeeOverlayLabel
    font-size 12px
    padding 0px 5px 25px 5px 
    display flex
    justify-content center
    text-transform uppercase
    font-weight 400

