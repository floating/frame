.dataUnverified
  position absolute
  color var(--bad)
  top 9px
  right 15px
  font-size 11px
  font-weight 500
  font-family 'MainFont'
  text-transform uppercase

.dataSource
  position absolute
  top 9px
  left 15px
  font-size 11px
  font-weight 500
  font-family 'MainFont'
  text-transform uppercase

.decodedDataContractTarget
  position relative
  height 70px
  padding 0px
  box-sizing border-box
  display flex
  flex-direction column
  align-items center
  justify-content center

  .decodedDataSync
    position absolute
    svg 
      transform rotate(90deg)

  .decodedDataSyncLeft
    left 14px
    top 28px
    width 8px
    overflow hidden
    transform rotate(-10deg)
    svg 
      transform rotate(90deg) scaleX(-1)

  .decodedDataSyncRight
    right 14px
    top 28px
    width 8px
    overflow hidden
    transform rotate(190deg)
    svg 
      transform rotate(90deg)

  .decodedDataContractName
    text-align center
    font-size 17px
    font-family 'MainFont'
    font-weight 400

  .decodedDataContractMethod
    text-align center
    font-family 'MainFont'
    font-weight 400
    font-size 16px
    color var(--moon)

.decodedDataContractArgHeader
  font-size 12px
  font-family 'MainFont'
  text-transform uppercase
  letter-spacing 2px
  font-weight 500
  text-align center
  height 30px
  display flex
  align-items center
  justify-content center
  color var(--outerspace)
  background var(--ghostD)
  border-radius 8px

.decodedDataContractArg
  position relative
  text-align center
  padding 10px 10px 25px 10px
  font-size 17px

.decodedDataSubtitle
  position absolute
  left 0
  bottom 0
  right 0
  height 30px
  font-size 12px
  font-weight 500
  font-family 'MainFont'
  display flex
  align-items center
  justify-content center

.overflowBox
  width 100%
  height auto
  overflow-x scroll
  overflow-y hidden
  word-wrap normal
  margin-bottom -15px

.rawDataHeader
  font-family 'MainFont'
  text-align center
  font-size 16px
  margin-top 20px
  margin-bottom 5px

.txDataOverlayRaw
  margin-top 30px
  
