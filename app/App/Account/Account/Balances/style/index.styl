.balancesBlock
  margin-bottom 60px
  box-sizing border-box
  overflow auto

.signerBalanceWarning
  position relative
  border-top 1px solid var(--ghostA)
  font-weight 400
  padding 10px 0px
  cursor pointer

.signerBalancesExpanded
  background blue
  width 100%

.signerBalancesWrap
  margin 0px 6px 6px 6px
  padding 0px 3px 3px 3px
  box-sizing border-box
  overflow auto
  background var(--ghostZ)
  border-radius 20px
  min-height 70px

  .signerBalance:first-child
    border-top-right-radius 17px
    border-top-left-radius 17px

  .signerBalance:last-child
    border-bottom-right-radius 17px
    border-bottom-left-radius 17px

  .signerBalance:first-child:last-child
    border-bottom-right-radius 17px

.signerBalanceWarningTitle
  position relative
  height 24px
  width 100%
  z-index 200000
  font-size 10px
  display flex
  justify-content center
  align-items center
  color var(--moon)
  text-transform uppercase
  pointer-events none

.signerBalanceWarningTitle:hover
  color var(--moonLight)

.signerBalanceWarningMessage
  position relative
  width 100%
  text-align center
  padding 20px
  box-sizing border-box
  font-size 12px
  font-weight 300

.signerBalanceTotal
  position relative
  height 64px
  width 100%
  z-index 200000
  font-size 14px
  margin-bottom 4px

  .signerBalanceButtons
    display flex
    justify-content left
    align-items center
    height 100%

  .signerBalanceButton
    height 40px
    margin-left 6px
    background var(--ghostB)
    border 3px solid var(--ghostZ)
    border-radius 20px
    box-sizing border-box
    cursor pointer
    z-index 4000
    display flex
    justify-content center
    align-items center
    font-size 11px
    font-weight 400
    letter-spacing 1px
    text-transform uppercase
    padding 1px 20px 0px 21px

    *
      pointer-events none
      margin-left 2px

  .signerBalanceButton:hover
    background var(--ghostC)
    color var(--outerspace)
    // color var(--good)

  .signerBalanceTotalText
    position absolute
    left 16px
    right 18px
    bottom 0px
    top 0px
    display flex
    justify-content flex-end
    align-items center

    .signerBalanceTotalLabel
      margin-right 10px
      margin-top 1px
      text-transform uppercase
      font-size 8px
      letter-spacing 1px
      font-weight 300

    .signerBalanceTotalValue
      font-size 17px
      font-family 'FiraCode'
      letter-spacing -1px
      font-size 15px
      text-align center
      display flex
      align-items center

.signerBalancesLoading
  position absolute
  top 38px
  left 5px
  right 5px
  bottom 0px
  z-index 200
  border-radius 11px
  display flex
  justify-content center
  align-items center

  .loader, .loader:after
    border-radius 100%
    width 22px
    height 22px

  .loader
    font-size 7px
    position relative
    text-indent -9999em
    border-top 3px solid var(--ghostZ)
    border-right 3px solid var(--ghostZ)
    border-bottom 3px solid var(--ghostZ)
    border-left 3px solid var(--ghostE)
    transform translateZ(0)
    animation load8 0.4s infinite linear !important

.signerBalance
  position relative
  opacity 1
  height 70px
  transition 0.1s ease-out all
  background var(--ghostA)
  border-radius 8px
  margin-top 3px
  font-family 'MainFont'

  .signerBalanceInner
    position relative
    height 100%
    transition var(--standard)

  .signerBalanceIcon
    position absolute
    top 18px
    left 12px

  .signerBalanceCurrency
    position absolute
    left 62px
    top 24px
    right 135px
    font-size 14px
    display flex
    align-items center
    font-weight 400
    white-space nowrap
    z-index 2
    overflow hidden

  .signerBalanceChain
    position absolute
    left 60px
    top 8px
    font-size 10px
    display flex
    align-items center
    font-weight 500
    white-space nowrap
    z-index 2
    text-transform uppercase
    letter-spacing 2px
    height 12px
    padding 0px 0px 0px 2px
    border-radius 8px
   
  .signerBalancePrice
    position absolute
    right 10px
    bottom 10px
    left 62px
    font-size 12px
    font-weight 400
    color var(--outerspace06)
    display flex
    align-items center
    justify-content space-between
    font-family 'FiraCode'

  .signerBalanceOk
    display flex
    align-items center
    justify-content center

  .signerBalanceCurrentValue
    display flex
    align-items center

  .signerBalanceCurrentPrice
    display flex
    align-items center
    color var(--outerspace)
    margin-left -2px

  .signerBalanceCurrentPriceChange
    display flex
    align-items center
    margin-left 4px

  .signerBalanceCurrentPriceChangeUp
    color var(--good)

  .signerBalanceCurrentPriceChangeDown
    color var(--bad)

  .signerBalanceChainIcon
    position absolute
    left -6px
    top 9px
    height 16px
    width 16px
    background var(--foreverwhite)
    border-radius 16px
    overflow hidden
    z-index 2
    color black
    box-shadow 0px 0px 2px var(--ghostA)

  .signerBalanceLogo
    position absolute
    left 0px
    top 13px
    height 32px
    width 32px
    background var(--foreverwhite)
    border-radius 16px
    overflow hidden
    z-index 1

    img:before
      content attr(alt)
      top 0
      bottom 0
      left 0
      right 0
      border-radius 13px
      position absolute
      background var(--outerspace)
      color var(--ghostF)
      display flex
      justify-content center
      align-items center
      font-size 11px
      font-weight 300
      letter-spacing -0.5px
      margin-left -0.5px
     
    img
      height 30px
      width 30px
      border-radius 15px
      position absolute
      top 1px
      left 1px
      overflow hidden

  .signerBalanceValue
    position absolute
    right 8px
    top 21px
    font-size 19px
    text-align center
    display flex
    align-items center
    font-family 'FiraCode'
    letter-spacing -1px
    font-weight 300

    .signerBalanceSymbol
      font-family 'MainFont'
      font-weight 400
      font-size 13px
      line-height 13px
      position relative
      top -1px
      letter-spacing 1px
      color var(--outerspace)
      padding 5px
      border-radius 6px

  .signerBalanceEquivalent
    position absolute
    right 7px
    bottom 5px
    font-size 12px
    color var(--outerspace05)
    display flex
    align-items center
    font-family 'FiraCode'

.signerBalance:last-child
  border-bottom none

.signerBalanceSliderDisplay
  position absolute
  top 0
  left 0
  right 0
  transition none

.signerBalanceSliderShadow
  position relative
  opacity 0

.signerBalanceNoTokens
  height 48px
  display flex
  justify-content center
  align-items center
  color var(--outerspace08)
  text-transform uppercase
  font-size 12px
  border-bottom 1px solid var(--ghostA)

.moduleLoading
  height 40px
  display flex
  justify-content center
  align-items center
  padding 20px
  border-bottom 1px solid var(--ghostA)
  margin 0px 16px

.moduleLoadingLoader
  border-radius 50%
  width 30px
  height 30px
  margin 30px auto
  font-size 10px
  position relative
  text-indent -9999em
  border-top 3px solid var(--ghostZ)
  border-right 3px solid var(--ghostZ)
  border-bottom 3px solid var(--ghostZ)
  border-left 3px solid var(--good)
  transform translateZ(0)
  animation load 0.5s infinite linear

@keyframes load
  0%
    -webkit-transform rotate(0deg)
    transform rotate(0deg)

  100%
    -webkit-transform rotate(360deg)
    transform rotate(360deg)
