._txButton
  background var(--ghostB)
  border-radius 19px
  transform translateY(0px)
  cursor pointer
  position relative
  overflow hidden

  *
    pointer-events none

._txButton:hover
  // background var(--good)
  color var(--goodOver)
  box-shadow 0px 12px 12px var(--ghostZ)
  animation 5s shake ease-in-out infinite alternate

._txButton:hover::after
  content ''
  position absolute
  inset 0
  background white
  background var(--good)
  z-index 3

._txButtonBad:hover
  color var(--badOver)

._txButtonBad:hover::after
  content ''
  position absolute
  inset 0
  background white
  color var(--badOver)
  background var(--bad)
  z-index 3

._txButton:active
  transform translateY(0px)
  // animation-name shake-little
  // animation-duration 2s
  // animation-timing-function: ease-in-out
  // animation-iteration-count: infinite
  box-shadow 0px 2px 2px var(--ghostX)

@keyframes shake 
  0% 
    transform translate3d(0px, 0px, 0) rotate(-0.4deg) scale(1)
  25% 
    transform translate3d(-0.7px, -1px, 0) rotate(0.4deg) scale(1.01)
  50% 
    transform translate3d(0.7px, 1px, 0) rotate(-0.4deg) scale(1.02)
  75% 
    transform translate3d(-0.7px, 0.3px, 0) rotate(0.2deg) scale(1.01)
  100% 
    transform translate3d(0.7px, 0.7px, 0) rotate(-0.4deg) scale(1)


