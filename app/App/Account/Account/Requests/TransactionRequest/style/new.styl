.txViewData
  margin 32px 8px
  background var(--ghostA)
  padding 32px 6px 64px 6px
  border-radius 20px
  border-bottom 2px solid var(--ghostZ)
  box-shadow 0px 2px 4px var(--ghostX)

  .txViewDataHeader
    padding 0px 0px
    margin-bottom 32px
    font-family 'VCR'
    text-transform uppercase
    font-size 14px
    text-align center
    font-weight 400
    letter-spacing 6px
    color var(--good)
    text-shadow 0px 0px 4px var(--good)
    margin-left 4px
    opacity 1

._txModule
  position absolute
  top 130px
  left 10px
  right 10px
  height 30px
  z-index 100000
  box-shadow 0px 0px 0px var(--ghostZ)
  
  ._txModuleInner
    position absolute 
    top 0
    right 0
    bottom 0
    left 0
    background var(--ghostC)
    border-radius 8px
    display flex
    flex-direction row
    align-items stretch
    font-weight 300
    // overflow hidden

    ._txModuleSlice
      display flex
      justify-content center
      align-items center
      text-transform uppercase
      font-size 12px
      // border-right 1px solid var(--ghostA)
      padding 0px 6px
      font-family 'FiraCode'

._txBody
  width 100%
  margin 0px 6px
  padding-top 22px

._txDescription
  width 100%
  font-family 'MainFont'
  font-size 16px
  font-weight 400
  cursor pointer
  padding 10px 0px

  *
    pointer-events none

  ._txDescriptionSummary
    display flex
    justify-content center
    align-items center
    flex-direction column

    ._txDescriptionSummaryTag
      padding-top 4px
      display flex
      justify-content center
      align-items center
      font-size 12px
      font-weight 500
      text-transform uppercase

    ._txDescriptionSummaryHeadline
      font-size 26px

    ._txDescriptionSummaryMidline
      font-size 12px

  ._txDescriptionTag
    font-size 10px
    width 100%
    border-top 1px solid var(--ghostX)
    padding 10px 20px
    text-transform uppercase

