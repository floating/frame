.settingsRow
  margin-bottom 20px
  text-align center
  border-radius 8px
  background var(--ghostB)
  padding 8px

  input
    z-index 200
    user-select auto
    background transparent
    background var(--ghostC)
    outline none
    border none
    margin-left 8px
    height 40px
    width 100%
    color var(--outerspace)
    margin 0
    border-radius 8px
    text-align center
    font-size 16px
    margin-bottom 8px

.settingsRowInset
  padding 8px
  margin-top 8px
  background var(--ghostA)
  border-radius 8px

.settingsRowInsetConnected
  color var(--good)

.settingsButton
  width 100%
  height 40px
  background var(--ghostC)
  border-radius 8px
  color var(--outerspace)
  display flex
  justify-content center
  align-items center
  font-weight 400
  font-size 13px
  box-sizing border-box
  text-transform uppercase
  box-shadow 0px 1px 2px var(--ghostZ)
  margin-top 8px
  cursor pointer

.settingsButton:hover
  background var(--ghostD)

.signerVerifyResponse
  background var(--bad)
  border-radius 8px
  color var(--badOver)
  font-size 14px
  padding 20px
  font-weight 600
  display flex
  justify-content center
  text-align center
  position relative
  box-sizing border-box
  margin-top 8px

.signerVerifyResponseSuccess
  background var(--good)
  color var(--goodOver)
