._txModule
  position absolute
  top 130px
  left 10px
  right 10px
  height 30px
  z-index 100000
  box-shadow 0px 0px 0px var(--ghostZ)
  
  ._txModuleInner
    position absolute 
    top 0
    right 0
    bottom 0
    left 0
    background var(--ghostC)
    border-radius 8px
    display flex
    flex-direction row
    align-items stretch
    font-weight 500
    // overflow hidden

    ._txModuleSlice
      display flex
      justify-content center
      align-items center
      text-transform uppercase
      font-size 12px
      // border-right 1px solid var(--ghostA)
      padding 0px 6px
      font-family FiraCode, monospace

._txBody
  background var(--ghostZ)
  width calc(100%)
  margin 0px 6px
  border-radius 12px
