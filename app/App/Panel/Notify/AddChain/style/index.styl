.addChainTitle
  padding 42px
  font-size 24px
  font-weight 100

.addChain
  font-size 16px
  position relative
  z-index 3
  word-break break-word
  width 100%
  box-sizing border-box

.chainRow
  width 100%
  display flex
  justify-content space-between
  padding 0px 5px 20px 5px
  box-sizing border-box

.chainRow:last-child
  padding 0px 5px 0px 5px

.chainName
  width 100%

.chainId
  width calc(50% - 5px)

.chainSymbol
  width calc(50% - 5px)

.chainExplorer
  width 100%

.chainRpc
  width 100%  

.chainInput
  background transparent
  outline none
  border none
  text-align center
  font-size 16px
  padding 8px
  width 100%
  background var(--ghostA)
  border-radius 8px
  font-family OpenSans, sans-serif
  padding 10px
  font-weight 300
  color var(--outerspace)

.chainInputLabel
  font-size 11px
  text-transform uppercase
  font-weight 500
  padding 0px 0px 5px 10px
  text-align left
  width 100%

.chainLayers
  width 100%
  // padding 0px 0px
  margin-top 25px

.chainLayerOptions
  display flex
  flex-wrap wrap
  justify-content space-between

.chainLayerOption
  background var(--ghostC)
  margin-bottom 5px
  height 42px
  border-radius 8px
  box-sizing border-box
  padding 10px
  cursor pointer
  width calc(50% - 2.5px)
  box-sizing border-box
  font-weight 300
  * 
    pointer-events none

.chainLayerOption:hover
  background var(--ghostD)
  color var(--good)

.addChainSubmit
  background var(--ghostD)
  width 100%
  margin-top 25px
  height 89px
  border-radius 8px
  box-sizing border-box
  padding 13px
  text-align center
  cursor pointer
  margin-bottom 5px
  display flex
  justify-content center
  align-items center
  font-size 18px
  text-transform uppercase
  * 
    pointer-events none

  svg
    margin-right 10px

.addChainSubmit:hover
  background var(--ghostE)
  color var(--good)