.panel
  #panelPush
    right 0

#panelPush
  position absolute
  right -365px
  bottom 0
  top 0px
  width 360px
  transition standard

#panel
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  -webkit-app-region no-drag
  display flex
  flex-direction column
  justify-content center
  align-items center
  transition standard
  transition-delay 0.18s

.panelRequest
  width 100%
  padding 10px
  display flex
  justify-content center
  align-items center
  flex-direction column

  .panelRequestBlock
    padding 10px 15px
    margin 15px
    border-radius 3px
    background white
    font-size 14px
    font-weight bold

.panelRequestGrant
  margin-top 40px
  padding-top 0px
  width 100%

.panelRequestGrantOption
  background green
  margin 15px
  padding 0px
  height 40px
  border-radius 20px
  display flex
  justify-content center
  align-items center
  background rgba(0, 0, 0, 0.08)
  -webkit-app-region no-drag

  &:hover
    background rgba(0, 0, 0, 0.78)

#panelTop
  position absolute
  top 0
  right 0
  left 0
  height 0

.panelBot
  padding 10px 10px 60px 10px
  display flex
  justify-content center
  margin-left 5px

  svg
    fill rgba(0, 0, 50, 0.1)

.panelMenu
  position absolute
  left 0
  right 4px
  top 0
  height 40px
  display flex
  justify-content space-between
  align-items center
  -webkit-app-region no-drag
  z-index 10000000
  opacity 1

  .panelMenuItem
    width 40px
    height 40px
    display flex
    justify-content center
    align-items center
    -webkit-app-region no-drag
    svg
      fill outerspace
      opacity 0.8

  .panelMenuItem:hover
    svg
      opacity 1

@import '../Main/style'
@import '../Local/style'
