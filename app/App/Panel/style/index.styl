.appMenu
  position absolute
  left 0px
  right 0px
  bottom 0px
  height 48px
  // padding 0px 9px 0px 9px
  display flex
  justify-content space-between
  align-items center
  -webkit-app-region no-drag
  z-index 100000000000
  opacity 1
  transform translate3d(0, 0, 0)
  // background linear-gradient(rgba(240, 240, 255, 0.5), rgba(240, 240, 255, 0))
  transition var(--standardFast)
  background var(--ghostB)
  // border-top 1px solid var(--thin)
  // box-shadow 0px -4px 10px var(--thick)
  // border-top-left-radius 12px
  // border-top-right-radius 12px
  display none

  .appMenuItem
    cursor pointer
    height 67px
    min-width 40px
    display flex
    align-items center
    border-right 1px solid thin

    .appMenuItemButton
      height 27px
      width 28px
      border-radius 14px
      display flex
      justify-content center
      align-items center
      -webkit-app-region no-drag
      transition var(--standard)
      pointer-events auto
      transform translate3d(0, 0, 0)
      background var(--ghostE)
      position absolute
      box-shadow 0px 4px 6px -1px var(--thin) // , 0px 8px 8px -2px var(--thin), 0px 0px 10px -2px var(--thin)
      cursor pointer
      padding-top 1px
      margin 10px

      *
        pointer-events none

