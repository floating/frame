.balancesBlock
  margin-bottom 60px
  box-sizing border-box

.signerBalanceTotal
  position relative
  height 44px
  width 100%
  z-index 200000
  font-size 14px

  .signerBalanceShowAll
    position absolute
    left 10px
    top 7px
    height 30px
    width 30px
    border-radius 4px
    cursor pointer
    z-index 4000
    display flex
    justify-content center
    align-items center
    font-size 10px
    font-weight 500
    letter-spacing 1px
    text-transform uppercase
    color var(--outerspace05)

    *
      pointer-events none

  .signerBalanceShowAll:hover
    background var(--ghostD)
    color var(--outerspace)
    // color var(--good)

  .signerBalanceTotalText
    position absolute
    // background var(--ghostD)
    left 16px
    right 16px
    bottom 0px
    top 0px
    display flex
    justify-content flex-end
    align-items center

    .signerBalanceTotalLabel
      margin-right 10px
      margin-top 2px
      text-transform uppercase
      font-size 12px
      letter-spacing 1px
      color var(--outerspace06)

    .signerBalanceTotalValue
      font-size 17px
      color var(--outerspace06)
      font-family FiraCode, monospace
      letter-spacing -1px
      font-size 17px
      text-align center
      display flex
      align-items center
  
.signerBalance
  position relative
  margin-left 16px
  width calc(100% - 32px)
  opacity 1
  height 60px
  transition 0.1s ease-out all
  border-bottom 1px solid var(--ghostA)
  font-family FiraCode, monospace
  letter-spacing -0.5px

  .signerBalanceCurrency
    position absolute
    left 41px
    top 11px
    font-size 17px
    text-align center
    display flex
    align-items center

  .signerBalanceCurrencySmall
    font-size 11px
    line-height 8px
    margin-left 3px
    color var(--outerspace03)
    position relative
    top 0px

  .signerBalancePrice
    position absolute
    left 39px
    bottom 11px
    font-size 13px
    color var(--outerspace06)
    display flex
    align-items center

  .signerBalanceCurrentPrice
    display flex
    align-items center
    color var(--outerspace07)

  .signerBalanceCurrentPriceChange
    margin-left 4px
    color var(--outerspace06)
    font-size 12px
    margin-top 1px

  .signerBalanceCurrentPriceChangeUp
    color var(--good)

  .signerBalanceCurrentPriceChangeDown
    color var(--bad)

  .signerBalanceLogo
    position absolute
    left 0px
    top 15px
    height 30px
    width 30px
    background  var(--foreverwhite) // var(--ghostB)
    box-shadow 0px 0px 3px 2px var(--thick)
    border-radius 15px
    
    img
      height 24px
      width 24px
      border-radius 12px
      overflow hidden
      position absolute
      top 3px
      left 3px

  .signerBalanceValue
    position absolute
    right 0px
    top 11px
    font-size 17px
    text-align center
    // border-left 1px solid var(--doubleThick)
    // border-right 1px solid var(--doubleThick)
    font-family FiraCode
    letter-spacing -1px

  .signerBalanceEquivalent
    position absolute
    right 0px
    bottom 11px
    font-size 13px
    color var(--outerspace07)
    display flex
    align-items center

.signerBalance:last-child
  border-bottom none

.signerBalanceBase
  // border 1px solid var(--ghostA)
  // width calc(100% - px)
  margin-top 2px
  // border-radius 8px
  // background var(--ghostC)
  // box-shadow 0px 4px 5px var(--ghostA)

.signerBalanceSliderDisplay
  position absolute
  top 0
  left 0
  right 0
  transition none

.signerBalanceSliderShadow
  position relative
  opacity 0

.signerBalanceNoTokens
  height 48px
  display flex
  justify-content center
  align-items center
  color var(--outerspace08)
  text-transform uppercase
  font-size 12px
  border-bottom 1px solid var(--ghostA)

.moduleLoading
  height 40px
  display flex
  justify-content center
  align-items center
  padding 20px
  border-bottom 1px solid var(--ghostA)
  margin 0px 16px

.moduleLoadingLoader
  border-radius 50%
  width 30px
  height 30px

.moduleLoadingLoader
  margin 30px auto
  font-size 10px
  position relative
  text-indent -9999em
  border-top 3px solid var(--ghostZ)
  border-right 3px solid var(--ghostZ)
  border-bottom 3px solid var(--ghostZ)
  border-left 3px solid var(--good)
  transform translateZ(0)
  animation load 0.5s infinite linear

@keyframes load
  0%
    -webkit-transform rotate(0deg)
    transform rotate(0deg)

  100%
    -webkit-transform rotate(360deg)
    transform rotate(360deg)

