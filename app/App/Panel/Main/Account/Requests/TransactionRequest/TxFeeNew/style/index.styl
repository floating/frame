._txFee
  position absolute
  top 215px
  left 5px
  right 5px
  height 30px
  z-index 100000
  
  ._txFeeInner
    position absolute 
    top 0
    right 0
    bottom 0
    left 0
    background var(--ghostC)
    border-radius 8px
    display flex
    flex-direction row
    align-items stretch
    font-weight 500
    // overflow hidden

    ._txFeeSlice
      display flex
      justify-content center
      align-items center
      text-transform uppercase
      // border-right 1px solid var(--ghostA)
      padding 0px 6px
      font-family FiraCode
          
    ._txFeeLabel
      font-weight 600
      font-size 11px
      text-transform uppercase
      font-family OpenSans
      padding 0px 15px 0px 15px
      // background var(--ghostD)

    ._txFeeGwei
      padding 0px 10px
      background var(--ghostE)
      border-radius 8px
      // background blue
      flex 1
      min-width 100px
      max-width 150px
      
      transition var(--standardFaster)
      cursor pointer
      // border-bottom 1px solid var(--ghostD)
      // stransform translateY(-3px)
      // border-bottom 1px solid var(--ghostD)
      transform translateY(0px)
      padding-top 1px
      // box-sizing border-box

      *
        pointer-events none

      ._txFeeGweiValue
        font-family Fira Code
        font-size 15px
        font-weight 500
        display flex
        align-items center
        justify-content center
        
      ._txFeeGweiLabel
        font-size 10px
        display flex
        align-items center
        justify-content center
        font-family FiraCode
        padding-left 3px

    ._txFeeGwei:hover
      // flex 1
      // padding 0px 10px
      background var(--moon)
      color var(--moonOver)
      transform translateY(-5px)
      box-shadow 0px 20px 30px -5px var(--ghostX)
      // border-bottom 1px solid var(--goodDark)
      animation 4s shake ease-in-out infinite alternate

    ._txFeeGwei:active
      transform translateY(0px)
      animation-name shake-little
      animation-duration 2s
      animation-timing-function: ease-in-out
      animation-iteration-count: infinite
      box-shadow 0px 5px 8px 0px var(--ghostZ)

    ._txFeeValue
      position relative
      justify-content flex-end
      font-weight 600
      font-size 13px
      flex 1

      ._txFeeValueDefault
        position absolute
        padding 1px 15px 0px 15px
        opacity 1
        top 0
        left 0
        bottom 0
        right 0
        display flex
        align-items center
        justify-content center

      ._txFeeValueDefaultWarn
        color var(--bad)

      ._txFeeValueHover
        display flex
        padding 2px 15px 0px 15px
        opacity 0

      ._txFeeETH
        // background yellow
        padding-right 6px
        opacity 0.8

      ._txFeeETHValue
        // background pink
        // padding-right 4px
        padding 0

      ._txFeeUSD
        font-weight 500
        position relative
        font-size 14px

      ._txFeeUSDSymbol
        font-size 11px

      ._txFeeUSDDescription
        font-size 9px
        font-family Open Sans
        padding-left 3px
        // color var(--moon)

      ._txFeeEq
        font-size 15px
        padding 0px 6px 0px 0px


    ._txFeeValue:hover
      ._txFeeValueDefault
        opacity 0

      ._txFeeValueHover
        opacity 1

._txFee:hover
  z-index 1000001

      
      
      

