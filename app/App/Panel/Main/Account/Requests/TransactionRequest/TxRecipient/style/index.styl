._txRecipient
  position absolute
  top 185px
  left 5px
  right 5px
  height 30px
  z-index 100000
  box-shadow 0px 0px 0px var(--ghostZ)
  
  ._txRecipientInner
    position absolute 
    top 0
    right 0
    bottom 0
    left 0
    background var(--ghostC)
    border-radius 8px
    display flex
    flex-direction row
    align-items stretch
    font-weight 500
    // overflow hidden

    ._txRecipientSlice
      display flex
      justify-content center
      align-items center
      font-size 15px
      // border-right 1px solid var(--ghostA)
      padding 0px 6px
      font-family FiraCode

    ._txRecipientLabel
      font-weight 600
      padding 0px 12px 1px 14px
      font-size 11px
      text-transform uppercase
      font-family OpenSans

    ._txRecipientValue
      padding 0px 10px
      background var(--ghostE)
      border-radius 8px
      flex 1
      transition var(--standardFaster)
      cursor pointer
      border-bottom 1px solid var(--ghostC)
      box-shadow 0px 0px 0px 0px var(--ghostA)
      transform translateY(0px)
      padding-top 1px

      span
        word-spacing 0px

      svg
        position relative
        top -2px
        padding 0px 0px
