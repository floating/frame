.launcher
  overflow-x auto
  overflow-y hidden

.launcherTiles
  display inline-flex
  position relative
  padding-right 6px
  margin-top 5px

.dappTile
  height 42px
  width 68px
  display flex
  justify-content center
  align-items center
  cursor pointer
  box-sizing border-box
  border-radius 8px
  background var(--ghostA)
  margin 0px 5px 0px 0px
  color var(--outerspace08)
  padding 5px
  // border-right 1px solid var(--ghostA)

  * 
    pointer-events none

  svg
    position relative

  img
    position relative
    height 100%

.dappTile:hover
  background var(--ghostB)

