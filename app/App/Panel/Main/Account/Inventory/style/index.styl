.inventoryCollection
  position relative
  border-radius 8px
  z-index 300

  .inventoryCollectionTop
    position relative
    display flex
    justify-content space-between
    align-items center
    padding 3px 9px 3px 12px
    font-size 14px
    margin 0px 3px 0px 3px
    cursor pointer
    border-radius 7px
    height 42px
    font-weight 300

    *
      pointer-events none

  .inventoryCollectionTop:hover
    background var(--ghostC)

  .inventoryCollectionImage
    height 42px
    width 42px
    border-radius 4px
    background var(--ghostA)
    overflow hidden

    img
      height 42px
      width 42px
      object-fit cover

  .inventoryCollectionItems
    position absolute
    top 189px
    bottom 0
    left 0
    right 0
    padding 8px 0px 5px 4px
    display flex
    flex-wrap wrap
    overflow-y scroll

    .inventoryCollectionItem
      width 85px
      height 85px
      border 3px solid var(--ghostB)
      background var(--ghostZ)
      padding 0px 5px 5px 0px
      border-radius 8px
      padding 3px
      box-sizing border-box

      cursor pointer
      *
        pointer-events none

      img
        width 100%
        height 100%
        border-radius 4px
        box-shadow 0px 2px 0px var(--ghostZ)
        object-fit cover
        transition 0.03s linear

    .inventoryCollectionItem:hover
      img
        transform scale(1.1)
        border-radius 5px
        box-shadow 0px 3px 6px var(--ghostX)

  .inventoryCollectionLine
    position absolute
    top 0
    left 16px
    right 16px
    bottom -1px
    border-bottom 1px solid var(--ghostA)
    pointer-events none

  .inventoryCollectionName
    display flex
    justify-content center
    align-items center

  .inventoryCollectionCount
    width 48px
    height 24px
    background var(--ghostA)
    display flex
    justify-content center
    align-items center
    border-radius 12px
    font-size 16px

// .inventoryCollection:hover
