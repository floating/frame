.pendingSignerWrap
  position relative
  height 70px
  width calc(100% - 20px)
  box-shadow 0px 7px 6px -5px outerspace03, 0px 1px 2px 0px rgba(6, 54, 82, 0.15), 0 0px 100px -50px rgba(6, 24, 52, .4), cardDrop
  background outerspace // lightShade
  margin 10px 10px 10px 10px
  border-radius 4px
  z-index 99999999
  transition standard
  will-change transform
  transform translate(0px, 0px)
  opacity 1

  .pendingSignerInset
    position absolute
    top 0
    right 0
    bottom 3px
    left 0px
    background outerspaceLight // light
    display flex
    justify-content flex-start
    align-items flex-start
    border-radius 4px
    color spacewhite

    .pendingSignerLogo
      height 63px
      margin 0px 15px 0px 18px
      display flex
      justify-content center
      align-items center

    .pendingSignerText
      height 70px
      width calc(100% - 60px)
      display flex
      justify-content center
      flex-direction column
      padding-right 13px

      .pendingSignerType
        text-transform uppercase
        line-height 15px
        font-size 14px
        font-weight 600
        letter-spacing 1px
        margin-bottom 4px

      .pendingSignerStatus
        text-transform none
        font-size 11px
        line-height 14px
        font-weight 400
