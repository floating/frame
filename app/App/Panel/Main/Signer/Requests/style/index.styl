.slideUp-enter
  opacity 0
  transform scale(1) translateY(-20px)
  transition standardSlow
  perspective 100px

.slideUp-enter.slideUp-enter-active
  opacity 1
  transform scale(1) translateY(0px)
  transition standardSlow
  transition-delay 0.32s
  perspective 100px

.slideUp-leave
  opacity 1
  transition standardSlow
  transform scale(1) translateY(0px)
  perspective 100px

.slideUp-leave.slideUp-leave-active
  opacity 0
  transform scale(1.4) translateY(0px)
  perspective 100px

