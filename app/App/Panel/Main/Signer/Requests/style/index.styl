@keyframes bounceIn {
  from,
  20%,
  40%,
  60%,
  80%,
  to {
    animation-timing-function: cubic-bezier(0.215, 0.61, 0.355, 1);
  }

  0% {
    opacity: 0;
    transform: scale3d(0.3, 0.3, 0.3);
  }

  20% {
    transform: scale3d(1.1, 1.1, 1.1);
  }

  40% {
    transform: scale3d(0.9, 0.9, 0.9);
  }

  60% {
    opacity: 1;
    transform: scale3d(1.03, 1.03, 1.03);
  }

  80% {
    transform: scale3d(0.97, 0.97, 0.97);
  }

  to {
    opacity: 1;
    transform: scale3d(1, 1, 1);
  }
}
.bounceIn {
  animation-duration: 0.75s;
  animation-name: bounceIn;
}

.loader,
.loader:after {
  border-radius: 100%;
  width: 7em;
  height: 7em;
}
.loader {
  font-size 7px
  position relative
  text-indent -9999em;
  border-top 6px solid outerspace01
  border-right 6px solid outerspace01
  border-bottom 6px solid outerspace01
  border-left 6px solid outerspace08
  transform translateZ(0)
  animation load8 1.1s infinite linear !important
}
@keyframes load8 {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

@keyframes shine {
  0% {
    transform: translateY(-2000px);
  }
  100% {
    transform: translateY(0);
  }
}

@keyframes sk-scaleout
  0%
    transform scale(0)
  100%
    transform scale(1.0)
    opacity 0

@keyframes scalein
  0%
    transform scale(0.8)
    opacity 0.2
  100%
    transform scale(1)
    opacity 1

@keyframes spin
  0%
    transform rotate(0deg)
  100%
    transform rotate(360deg)

@keyframes sheen
  0%
    transform translateX(-300px) rotate(-30deg)
  80%
    transform translateX(-300px) rotate(-30deg)
  95%
    transform translateX(300px) rotate(30deg)
  100%
    transform translateX(-300px) rotate(60deg)

@keyframes pulse
  0%
    fill outerspace
  50%
    fill outerspacePulse
  100%
    fill outerspace

