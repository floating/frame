    background rgba(246,248,253,1)
    box-shadow 0px 1px 0px rgba(205,220,235,1) // , 0px 1px 0px rgba(0,24,100,0.8)
    margin 5px

  .signerRequestSuccess
    background good

    .approveTransactionPayload
      color #116338

  .signerRequestPending
    background #ffd7a5
    .approveTransactionPayload
      color #0d3a56

  .signerRequestDeclined
    background bad
    .approveTransactionPayload
      color #491410

  .requestNotice
    height 120px
    font-size 16px
    display flex
    justify-content center
    align-items center
    padding 40px

  .approveTransaction
    display flex
    width 100%
    height 300px
    flex-direction column

    .approveTransactionTitle
      padding 10px
      font-weight 400
      font-size 14px

    .approveTransactionPayload
      padding 6px
      font-size 11px
      font-weight 300
      height 180px
      width 100%
      display flex
      justify-content center
      align-items center
      flex-direction column

      div
        white-space nowrap

  .unknownType
    display flex
