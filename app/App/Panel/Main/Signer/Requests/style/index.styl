   .requestContainer
     position absolute
     top 0px
     right 0px
     bottom 0px
     left 0px
     display flex
     justify-content center
     align-items center
     flex-direction column

  .signerRequestItems
    overflow scroll

  default = 0px 3px 2px 1px thin, 0px 25px 20px -15px thick

  .signerRequest
    border-radius 2px
    display flex
    justify-content space-between
    align-items center
    position relative
    width calc(100% - 20px)
    box-shadow 0px 2px 0px lightShade, default
    border-radius 2px
    background light
    margin 5px

  .signerRequestSuccess
    background good
    box-shadow 0px 2px 0px good, default

    .approveTransactionPayload
      color #116338

  .signerRequestPending
    background #ffd7a5
    box-shadow 0px 2px 0px #ffd7a5, default
    .approveTransactionPayload
      color #0d3a56

  .signerRequestDeclined
    background bad
    box-shadow 0px 2px 0px bad, default
    .approveTransactionPayload
      color #491410

  .requestNotice
    height 120px
    display flex
    justify-content center
    align-items center

  .approveTransaction
    display flex
    width 100%
    height 450px
    flex-direction column

    .approveTransactionIcon
      width 100%
      padding-top 20px
      padding-bottom 20px
      display flex
      justify-content center

      svg
        fill outerspace

    .approveTransactionTitle
      padding 0px 20px 2px 20px
      height 30px
      margin-bottom 25px
      display flex
      justify-content center
      align-items center
      border-radius 15px
      text-transform uppercase
      letter-spacing 3px
      font-weight 400
      font-size 14px
      background thin

    .approveTransactionPayload
      width 100%
      display flex
      align-items center
      flex-direction column

      div
        white-space nowrap

  .transactionTotal
    width 100%
    padding-bottom 0px
    display flex
    justify-content center
    align-items center
    flex-direction column

    .transactionSub
      display flex
      flex-direction column
      font-size 20px
      letter-spacing 1px

      .transactionSubSubtitle
        margin-top -5px
        font-weight 400
        text-transform uppercase
        letter-spacing 1px

      .transactionSubValue
        display flex
        justify-content center
        align-items center
        flex-direction column
        font-size 28px
        letter-spacing 1px
        padding-bottom 15px

        .transactionSubSubtitle
          font-size 12px
          letter-spacing 1px

      .transactionSubFee
        display flex
        justify-content center
        align-items center
        flex-direction column
        padding-bottom 15px

        .transactionSubSubtitle
          font-size 12px

  .transactionData
    padding 0px 20px 0px 20px
    height 60px
    width calc(100% - 40px)
    margin-top 10px
    display flex
    justify-content center
    align-items center
    background thin

  .transactionTo
    height 80px
    width 100%
    font-size 12px
    font-family firaCode
    background outerspace
    color spacewhite
    display flex
    justify-content center
    align-items center

  .unknownType
    display flex
    justify-content center
    align-items center
    width 100%
    margin-bottom 60px
    padding 20px

  .requestApprove
    position absolute
    left 0
    right 0
    bottom 0
    height 60px
    border-bottom-left-radius 3px
    border-bottom-right-radius 3px
    font-weight 400
    font-size 12px
    text-transform uppercase
    letter-spacing 2px
    -webkit-app-region no-drag

    .requestDecline
      position absolute
      left 0
      top 0
      bottom 0
      width 50%
      display flex
      justify-content center
      align-items center
      -webkit-app-region no-drag

    .requestSign
      position absolute
      right 0
      top 0
      bottom 0
      width 50%
      display flex
      justify-content center
      align-items center
      border-top-left-radius 6px
      -webkit-app-region no-drag

.signerRequestsHidden
  left -100%
  right 100%
