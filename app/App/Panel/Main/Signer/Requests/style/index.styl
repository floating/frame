  .requestApprove
    position absolute
    left 0
    right 0
    bottom 0
    height 60px
    border-bottom-left-radius 3px
    border-bottom-right-radius 3px
    font-weight 400
    font-size 12px
    text-transform uppercase
    letter-spacing 2px
    -webkit-app-region no-drag

    .requestDecline
      position absolute
      left 0
      top 0
      bottom 0
      width 50%
      display flex
      justify-content center
      align-items center
      -webkit-app-region no-drag

    .requestSign
      position absolute
      right 0
      top 0
      bottom 0
      width 50%
      display flex
      justify-content center
      align-items center
      border-top-left-radius 6px
      -webkit-app-region no-drag

