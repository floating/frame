      background thin
      width 30px
      height 30px
      border-radius 2px
      display flex
      justify-content center
      align-items center
      // font-size 18px
      font-weight 400

  .requestBottom
    position relative
    display flex
    align-items center
    justify-content center
    height 40px
    /// border-bottom 1px solid pink
    padding-left 10px
    padding-right 10px

    svg
      fill outerspace

