.slideUp-enter
  opacity 0
  margin-top 30px

.slideUp-enter.slideUp-enter-active
  opacity 1
  margin-top 0px
  transition standard

.slideUp-leave
  opacity 1
  margin-top 0px

.slideUp-leave.slideUp-leave-active
  opacity 0
  margin-top -30px
  transition standard

.signerRequests
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  z-index 200
  display flex
  flex-direction column
  transition standard
  overflow hidden

  .noRequests
    position absolute
    top 0
    right 0
    left 0
    padding-top 60px
    font-size 12px
    font-weight 400
    letter-spacing 1px
    text-transform uppercase
    display flex
    justify-content center
    align-items center
    opacity 0.7

  .requestTitle:before
    content ''
    position absolute
    bottom -2px
    right 10px
    left 10px
    height 4px
    border-radius 2px
    background thin

  .requestTitle
    position relative
    display flex
    align-items flex-end
    justify-content:space-between;
    height 60px
    font-size 20px
    padding 0px 10px 10px 10px

    .requestCount
      background thin
      width 30px
      height 30px
      border-radius 2px
      display flex
      justify-content center
      align-items center
      font-weight 400

  .requestBottom
    position relative
    display flex
    align-items center
    justify-content center
    height 40px
    padding-left 10px
    padding-right 10px

    svg
      fill outerspace

