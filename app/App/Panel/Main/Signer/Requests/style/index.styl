  .signerRequestItems
    overflow scroll

  .signerRequest
    border-radius 2px
    display flex
    justify-content space-between
    align-items center
    position relative
    width calc(100% - 10px)
    // background #eff1f5
    // overflow hidden
    // // margin-bottom 20px
    // box-shadow 0px 10px 14px -8px rgba(0,20,60,0.2), 0px 0px 4px 0px rgba(0,20,60,0.1)
