.signerStatus
  .signerStatusTop
    position relative
    height 10px

    .signerStatusTopArrow
      background var(--ghostC)
      width 14px
      height 14px 
      border-radius 4px
      transform rotate(45deg)
      position absolute
      top 4px
      left 22px

  .signerStatusMain
    background var(--ghostC)
    border-radius 8px

.signerUnlockWrap
  display flex
  align-items center
  flex-direction column
  transform translateY(0px)
  min-height 100px
  height 0
  width 100%
  transition var(--standard)

  .signerUnlockInput
    height 40px
    width calc(100% - 30px)
    padding-bottom 0px
    border 0
    outline 0
    background var(--ghostF)
    font-size 20px
    letter-spacing 6px
    display flex
    justify-content center
    align-items center
    text-align center
    border-radius 20px
    color var(--outerspace08)
    box-shadow cardDrop, 0px 2px 0px var(--thin), 0px 8px 8px -2px var(--thin), 0px 0px 10px -2px var(--thin)
  
  .signerUnlockSubmit
    height 30px
    background var(--ghostF)
    font-size 12px
    margin 10px 0px 0px 0px
    width 140px
    border-radius 15px
    display flex
    justify-content center
    align-items center
    color var(--outerspace08)
    font-weight 600
    box-shadow cardDrop, 0px 10px 10px var(--ghostB), 0px 8px 8px -2px var(--thick), 0px 0px 10px -2px var(--thick)

