.signerMenu
  position absolute
  left 0
  top 0
  right 0
  display flex
  align-items center
  justify-content center
  height 100px

  .signerMenuItemRight
    right 0
    .signerMenuItemIcon
      margin-left -120px

  .signerMenuItemLeft
    left 0
    .signerMenuItemIcon
      margin-right -120px

  .signerMenuItem
    position absolute
    top 0
    width 90px
    height 100px
    display flex
    align-items center
    justify-content center
    flex-direction column
    text-align center
    -webkit-app-region no-drag
    overflow hidden
    will-change transform
    transform translate3d()

    .signerMenuItemIcon
      height 47px
      width 24px
      display flex
      align-items center
      justify-content center
      transition standardSlow
      flex-direction column
      opacity 0
      position relative

      .iconUnderline
        height 2px
        opacity 0
        border-radius 1px
        background outerspace
        transition standardSlow
        position absolute
        bottom 0
        left 0
        right 0

      svg
        fill outerspace
        margin-bottom 7px
        margin-top 14px

.signerMenuOpen
  .signerMenuItem
    .signerMenuItemIcon
      margin-right 0px
      margin-left 0px
      opacity 0.4
      .iconUnderline
        transition standard

.signerMenuOpen.signerMenuDefault
  .signerMenuItemLeft
    .signerMenuItemIcon
      opacity 1
      .iconUnderline
        right 0px
        opacity 1
        transition-delay 0.12s

  .signerMenuItemRight
    .signerMenuItemIcon
      .iconUnderline
        left -120px
        opacity 0
        transition-delay 0s

.signerMenuOpen.signerMenuSettings
  .signerMenuItemLeft
    .signerMenuItemIcon
      .iconUnderline
        right -120px
        opacity 0
        transition-delay 0s

  .signerMenuItemRight
    .signerMenuItemIcon
      opacity 1
      .iconUnderline
        margin-left 0px
        opacity 1
        transition-delay 0.12s
