.signerSettings
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  padding 0px 0px 30px 0px
  transition standard
  overflow-y scroll

  .signerSettingsTitle:before
    content ''
    position absolute
    bottom -2px
    right 10px
    left 10px
    height 4px
    border-radius 2px
    background thin

  .signerSettingsTitle
    position relative
    display flex
    align-items flex-end
    height 60px
    font-size 20px
    padding 0px 10px 10px 10px

.signerSettingsHidden
  left 100%
  right -100%

.appInfo
  display flex
  justify-content center
  padding 0px
  flex-direction column
  font-size 14px
  font-weight 300
  padding 5px

  .appInfoLine
    padding 5px 15px 5px 15px
    display flex
    justify-content space-between

.signerPermission:before
  content ''
  position absolute
  bottom -2px
  right 20px
  left 20px
  height 4px
  border-radius 2px
  background thin

.signerPermission
  display flex
  position relative
  justify-content space-between
  align-items center
  padding 10px 20px
  font-size 14px
  font-weight 300

  .signerPermissionOrigin
    background transparent

  .signerPermissionToggle
    position relative
    background bad
    height 20px
    width 40px
    border-radius 10px
    transition standard

    .signerPermissionToggleSwitch
      position absolute
      top 2px
      left 2px
      bottom 2px
      width 16px
      border-radius 10px
      background white
      transition standard

  .signerPermissionToggleOn
    background good
    .signerPermissionToggleSwitch
      position absolute
      left 22px
