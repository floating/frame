.signerSettings
  position absolute
  top 10px
  right 0
  bottom 0
  left 0
  transition standard
  transform translateZ(0)
  overflow hidden

  .signerVerifyResponse
    background var(--bad)
    margin 20px 0px
    border-radius 6px
    color var(--spacewhite)
    font-size 16px
    padding 20px 40px
    font-weight 400
    display flex
    justify-content center
    text-align center

  .signerVerifyResponseSuccess
    background var(--good)

  .signerSlide
    position absolute
    top 50px
    right 0
    left 0
    bottom 0
    transition standard
    padding-bottom 50px
    overflow-y scroll
    overflow-x hidden
    .signerSubslider
      width 1000%
      display flex
    .signerSubsliderSlide
      width 10%
    .signerSubsliderSlideMessage
      padding 20px
      display flex
      flex-direction column
      justify-content flex-start
      align-items center
      text-align center
    .renameAccountButtonWrap
      padding 10px
      display flex
      justify-content center
      align-items center
      text-align center


  .signerSettingsTitle:before
    content ''
    position absolute
    bottom -2px
    right 10px
    left 10px
    height 4px
    border-radius 2px
    background var(--thin)

  .signerSettingsTitle
    position relative
    display flex
    align-items flex-end
    justify-content space-between
    height 40px
    font-size 22px
    padding 0px 10px 10px 10px

.signerSettingsHidden
  left 100%
  right -100%

.signerPermission:before
  content ''
  position absolute
  bottom -2px
  right 20px
  left 20px
  height 4px
  border-radius 2px
  background var(--thin)

.signerPermission
  position relative
  justify-content space-between
  padding 10px 20px
  font-size 18px
  font-weight 200
  transform translateZ(0)
  z-index 1

  .signerPermissionControls
    display flex
    position relative
    justify-content space-between
    transform translateZ(0)
    z-index 40

  .signerPermissionDetails
    display flex
    position relative
    justify-content space-between
    transform translateZ(0)
    font-size 14px
    padding 5px 0px 0px 0px
    z-index 20

  .keyCommand
    margin-left 2px
    padding 1px 6px 2px 6px
    font-weight 400
    border-radius 5px
    font-size 12px
    border 1px solid var(--outerspace05)
    color var(--outerspace)
    height 30px

  .nodeProviderStatus
    display flex
    justify-content center
    align-items center
    height 18px
    border-radius 10px
    font-size 10px
    text-transform uppercase
    padding-left 8px
    padding-right 8px
    background var(--bad)
    padding-bottom 1px
    font-weight 400
    color #f3f6fd
    text-shadow 0px 1px 2px rgba(100, 0, 0, 0.2), 0px 1px 0px rgba(100, 0, 0, 0.2)
    transform translateZ(0)

  .nodeProviderConnected
    background var(--good)
    text-shadow 0px 1px 2px rgba(0, 50, 50, 0.2), 0px 1px 0px rgba(0, 50, 50, 0.2)

  .signerPermissionOrigin
    background transparent
    width 250px
    direction rtl
    text-overflow ellipsis
    overflow hidden
    text-align left
    white-space nowrap

  .signerPermissionToggle
    position relative
    background var(--bad)
    height 20px
    width 40px
    border-radius 10px
    transition standard
    transform translateZ(0)
    margin-top 2px

    .signerPermissionToggleSwitch
      position absolute
      top 2px
      left 2px
      bottom 2px
      width 16px
      border-radius 10px
      transition standard
      background var(--highlight)
      box-shadow 0px 6px 6px -2px rgba(0,20,60,0.15), 0px 1px 2px 0px rgba(0,20,60,0.05)
      transform translateZ(0)

  .signerPermissionToggleOn
    background var(--good)
    .signerPermissionToggleSwitch
      position absolute
      transform translateX(20px)

  .signerPermissionToggle:hover
    .signerPermissionToggleSwitch
      background var(--highlightest)


@import '../RenameAccount'
