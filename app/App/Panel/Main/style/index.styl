@import '../Signer/style'

.main
  position absolute
  top 0px
  right 0px
  bottom 0px
  left 0px
  transition standard

.mainHidden
  right 100%
  left -100%

#panelScroll
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  display flex
  justify-content center
  align-items center

  #panelSlide
    max-height 100%
    width 100%
    overflow-y scroll
    transition standardSlow

  #panelSlide::-webkit-scrollbar
    display none

  #panelWrap
    width 100%
    padding-top 40px
    padding-bottom 40px
    will-change scroll-position

    .noSigners
      width 100%
      display flex
      justify-content center
      align-items center
      flex-direction column
      font-weight 200
      font-size 22px
      position relative
      z-index 10000000

      .introLogo
        padding-bottom 38px

        svg
          fill outerspace

      .getStarted
        margin-top 30px
        height 30px
        box-sizing border-box
        border-radius 15px
        padding 0px 40px 2px 40px
        display flex
        justify-content center
        align-items center
        font-size 14px
        // color spacewhite
        font-weight 300
        background highlight
        transition standard
        box-shadow cardDrop

      .featureBox
        display flex
        justify-content center
        align-items center
        flex-direction column
        margin-top 30px

        .featureBoxText
          font-size 13px
          font-weight 400
          // text-transform uppercase
          letter-spacing 4px

        .featureBoxSubtext
          margin-top 8px
          font-size 10px
          font-weight 500
          // text-transform uppercase
          font-family FiraCode, sans-serif
          justify-content center
          letter-spacing 1px
          opacity 0.7

.signersSlide
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  z-index 6000
  pointer-events none

.panelBottomMenu
  position absolute
  left 0
  right 0px
  bottom 0
  height 80px
  // padding 0px 5px 100px 5px
  display flex
  justify-content center
  align-items center

  -webkit-app-region no-drag
  z-index 10000000
  opacity 1
  // background linear-gradient(rgba(240, 240, 255, 0), rgba(240, 240, 255, 0.5))

.addAccountShade
  opacity 0
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  z-index 9000000000
  // background linear-gradient(to right top, #d16ba5, #c777b9, #ba83ca, #aa8fd8, #9a9ae1, #8aa7ec, #79b3f4, #69bff8, #52cffe, #41dfff, #46eefa, #5ffbf1);
  pointer-events none
  transition standardSlow
  background: linear-gradient(to right, #ffc3a0, #FFAFBD); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */

  // background: linear-gradient(to right, #89fffd, #ef32d9); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */

  // background: linear-gradient(to left, #89fffd, #ef32d9); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */

.addAccountShadeActive
  opacity 0.5

.addAccountInterface
  position absolute
  // background rgba(0,0,50,0)
  top 0
  right 0
  bottom 0
  left 0
  z-index 9000000004
  pointer-events none
  transition standardSlow
  // display flex
  // justify-content center
  // align-items center

  .addAccountTrigger
    position relative
    height 40px
    width 40px
    border-radius 20px
    // background red
    display flex
    justify-content center
    align-items center
    // background rgba(240, 240, 255, 0.3)
    background light
    // box-shadow light
    pointer-events auto
    transition standardSlow
    z-index 4
    color outerspace08
    box-shadow 0px 8px 7px -5px rgba(6, 54, 52, 0.15)
    transform rotate(-1deg)

    .addAccountTriggerIcon
      z-index 3
      transition standardSlow
      font-size 30px
      // width 16px
      // height 16px
      margin 0px 0px 2px 1px
      color outerspace08
      transform rotate(1deg)

  .addAccountTriggerActive
    background phase
    box-shadow 0px 8px 7px -5px rgba(252, 70, 107, 0.4)
    .addAccountTriggerIcon
      color rgba(252, 70, 107, 0.7)
      transform rotate(45deg)

