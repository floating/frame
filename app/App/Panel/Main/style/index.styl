.addAccountMain
  pointer-events none
  opacity 0
  transform translateY(calc(150px))
  position absolute
  background phase
  color rgba(252, 70, 107, 0.8)
  top 60px
  right 10px
  bottom 90px
  left 10px
  border-radius 5px
  transition standardSlow
  z-index 5
  z-index 9000000002
  box-shadow 0px 30px 70px -20px rgba(252, 70, 107, 0.7)
  padding-bottom 200px
  overflow-y scroll
  overflow-x hidden

  .addAccountTitle
    height 60px
    width 100%
    margin 20px 0px 0px 0px

  .addAccountHeader
    height 20px
    width 100%
    margin 20px 0px 0px 0px

  .addAccountItem
    height 60px
    width calc(100% - 40px)
    margin 20px 20px 0px 20px
    border-radius 5px
    box-shadow 0px 30px 70px -20px rgba(252, 70, 107, 0.7)

  .addAccountItemHardware
    background linear-gradient(to right, #2c3e50, #bdc3c7)

  .addAccountItemSmart
    background linear-gradient(to right, #3F5EFB, #FC466B)

  .addAccountItemHot
    background linear-gradient(to right, #b91d73, #f953c6)

.addAccountMainActive
  pointer-events auto
  opacity 1
  transform translateY(0px)
