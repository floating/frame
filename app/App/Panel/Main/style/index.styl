@import '../Signer/style'
@import '../PendingSigner/style'

.card
  position absolute
  top 0px
  right 0px
  bottom 0px
  left 0px
  // transition var(--standardFast)
  opacity 1
  transition 5s linear all

#panelScroll
  position absolute
  top 63px
  right 0
  bottom 0
  left 0
  display flex
  justify-content center
  align-items center

  #panelSlide
    max-height 100%
    width 100%
    overflow-y scroll
    transition var(--standardSlow)

  #panelSlide::-webkit-scrollbar
    display none

  #panelWrap
    width 100%
    padding-top 67px
    padding-bottom 128px
    will-change scroll-position

    .panelHeader
      // background blue
      position absolute
      left 0
      right 0
      top 0px 
      height 63px
      background var(--ghostB)
      z-index 20000000000
      transition var(--standardFast)
      margin 0px 5px 0px 5px
      border-radius 8px
      box-shadow 0px 3px 3px rgba(0, 0, 0, 0.2)

      
      .panelHeaderTitle
        position absolute 
        left 0
        top 0
        bottom 0
        font-size 20px
        padding 18px

      .panelHeaderUpdate
        position absolute 
        right 23px
        top 18px 
        bottom 0
        // background red
        // padding 18px
        cursor pointer
        height 24px
        width 60px
        border-radius 15px
        background var(--ghostD)
        display flex
        justify-content center
        align-items center
        font-family 'FiraCode', monospace
        font-size 15px
        font-weight 600

        .panelHeaderUpdateToggle
          position absolute 
          height 24px
          width 50px
          border-radius 15px
          left 0
          background var(--ghostE)
          box-shadow 0px 3px 3px rgba(0, 0, 0, 0.2)

    .noSigners
      width 100%
      display flex
      justify-content center
      align-items center
      flex-direction column
      font-weight 300
      font-size 19px
      position relative
      z-index 100

      .introLogo
        padding-bottom 38px

        svg
          fill var(--outerspace)

      .getStarted
        margin-top 30px
        box-sizing border-box
        border-radius 12px
        padding 20px
        font-size 14px
        margin 20px
        text-align center
        font-weight 500
        background var(--outerspace)
        color var(--spacewhite)
        line-height 24px

        .getStartedPlus
          display inline-block
          position relative
          top 4px
          border 2px solid var(--spacewhite)
          width 22px
          height 22px
          border-radius 11px
          text-align center
          margin 0px 5px 0px 5px
          box-sizing border-box

          span 
            position relative
            top -3px
            left 2px
            font-size 17px

      .featureBox
        display flex
        justify-content center
        align-items center
        flex-direction column
        margin-top 30px

        .featureBoxText
          font-size 13px
          font-weight 400
          letter-spacing 4px

        .featureBoxSubtext
          margin-top 8px
          font-size 10px
          font-weight 500
          font-family FiraCode, monospace
          justify-content center
          letter-spacing 1px
          opacity 0.7

.signersSlide
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  z-index 6000
  pointer-events none

@import '../Add/style'
