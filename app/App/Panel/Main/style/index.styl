@import '../Signer/style'

.main
  position absolute
  top 0px
  right 0px
  bottom 0px
  left 0px
  transition standard

.mainHidden
  right 100%
  left -100%

#panelScroll
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  display flex
  justify-content center
  align-items center

  #panelSlide
    max-height 100%
    width 100%
    overflow-y scroll
    transition standardSlow

  #panelSlide::-webkit-scrollbar
    display none

  #panelWrap
    width 100%
    padding-top 40px
    padding-bottom 40px
    will-change scroll-position

    .noSigners
      width 100%
      display flex
      justify-content center
      align-items center
      flex-direction column
      font-weight 200
      font-size 22px
      position relative
      z-index 10000000

      .introLogo
        padding-bottom 14px

        svg
          fill outerspace

      .introInstructions
        margin-top 15px
        font-size 12px
        font-weight 300
        padding 10px 10px 0px 10px
        margin 30px 10px 30px 10px
        border-radius 6px
        background lowlight
        box-shadow cardDrop
        text-align cleft
        line-height 18px
        font-weight 300
        color outerspace08
        .introInstructionItem
          margin-bottom 20px
          padding 0px 20px
          span
            color good
            text-decoration none

        .introInstructionList
          margin 8px 5px 20px 5px
          border-radius 3px
          padding 16px
          background highlight
          box-shadow cardDrop
          font-weight 400
          div
            font-size 14px
            line-height 26px

      .featureBox
        display flex
        justify-content center
        align-items center
        flex-direction column

        .featureBoxText
          font-size 13px
          font-weight 400
          text-transform uppercase
          letter-spacing 4px

        .featureBoxSubtext
          margin-top 8px
          font-size 10px
          font-weight 400
          text-transform uppercase
          justify-content center
          letter-spacing 1px
          opacity 0.7

.signersSlide
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  z-index 6000
  pointer-events none
