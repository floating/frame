@import '../Signer/style'


.main
  position absolute
  top 0px
  right 0px
  bottom 0px
  left 0px

#panelScroll
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  display flex
  justify-content center
  align-items center

  #panelSlide
    max-height 100%
    width 100%
    overflow-y scroll
    transition standardSlow
    will-change scroll-position

  #panelSlide::-webkit-scrollbar
    display none

  #panelWrap
    width 100%
    padding-top 40px
    padding-bottom 40px

.signersSlide
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  z-index 6000
  pointer-events none
