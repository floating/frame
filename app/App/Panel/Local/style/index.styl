.requestFeature
  padding 30px 0px 0px 0px
  display flex
  justify-content center
  align-items center

  .requestFeatureButton:hover
    background var(--moonLight)

  .requestFeatureButton
    background var(--moon)
    color var(--moonOver)
    padding 0px 30px
    border-radius 12px
    height 30px
    font-size 13px
    display flex
    justify-content center
    align-items center
    text-transform uppercase
    font-weight 400
    cursor pointer
    *
      pointer-events none

.snipIt
  display flex
  flex-direction column
  justify-content center
  align-items center
  transform translateZ(0)
  // margin 0px 0px 0px 0px
  background var(--ghostA)
  padding 20px 10px
  border-radius 12px
  font-size 13px
  font-weight 300
  position relative
  z-index 1


  @keyframes spin
    0% 
      transform rotate(0deg)
    100%
      transform rotate(360deg)

  @keyframes spinReverse
    0% 
      transform rotate(0deg)
    100%
      transform rotate(-360deg)

  .snipItBrowserExtensionIcons
    display flex
    justify-content center
    align-items center
    padding 20px
    color var(--outerspace08)
    
    .snipItBrowserExtensionIcon:hover
      background var(--ghostD)

    .snipItBrowserExtensionIcon
      display flex
      justify-content center
      align-items center
      background var(--ghostC)
      height 60px
      width 60px
      border 1px solid var(--thick)
      border-radius 12px
      margin 0px 5px
      box-shadow cardDrop // , 0px 4px 2px -3px rgba(0, 25, 35, 0.14)
      cursor pointer

      *
        pointer-events none

