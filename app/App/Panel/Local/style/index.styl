.localSettings
  position absolute
  top 0px
  right 0px
  bottom 0px
  left 0px
  display flex
  justify-content center
  padding 0px 0px 0px 0px
  flex-direction column
  transition standard
  transform translateZ(0)

  .localSettingsTitle:before
    content ''
    position absolute
    bottom -2px
    right 10px
    left 10px
    height 4px
    border-radius 2px
    background thin

  .localSettingsTitle
    position relative
    display flex
    align-items flex-start
    z-index 9999999
    height 60px
    font-size 22px
    padding 0px 10px 10px 10px

.localSettingsHidden
  right -100%
  left 100%

.signerSetting
  display flex
  justify-content center
  align-items center
  padding 0px 0px 20px 0px
  flex-direction column

.settingsTitle
  width 100%
  display flex
  justify-content center
  align-items center
  padding 20px 0px 20px 0px
  background rgba(255, 255, 255, 0.8)

.settingsItems
  width 100%
  display flex
  justify-content center
  align-items center
  padding 20px 0px 20px 0px
  background rgba(0,0,50,0.1)
  flex-direction column

.settingsItem
  width 100%
  display flex
  justify-content flex-start
  align-items center
  padding 20px

.viewLicense
  width 100%
  text-align center
  font-size 10px
  text-transform uppercase
  font-weight 400
  letter-spacing 1px
  color outerspace05

.viewLicense:hover
  color outerspace08

.quitFrame
  width 100%
  padding 20px
  margin-top 15px

  .quitFrameButton
    width calc(100% - 40px)
    border-radius 20px
    height 40px
    font-size 13px
    text-transform uppercase
    font-weight 400
    letter-spacing 1px
    display flex
    justify-content center
    align-items center
    background thin
    transition standard

  .quitFrameButton:hover
    background thick

.connectionTitle
  justify-content space-between
  height 26px
  max-height 26px

  .connectionTitleSet
    height 26px
    border-radius 13px
    letter-spacing 1px
    font-weight 400
    width 113px
    padding 0px 0px 0px 0px
    font-size 13px
    text-transform uppercase
    background highlight
    flex-direction column
    overflow hidden
    transition standard
    box-shadow cardDrop
    transform translateZ(0)

    .connectionTitleSetItems
      position relative
      transition standard
      transform translateZ(0)

      .connectionTitleSetItem
        display flex
        justify-content center
        align-items center
        height 26px
        min-height 26px
        width 100%
        box-sizing border-box
        padding 0px 15px 0px 15px
        pointer-events none
        transform translateZ(0)

        .connectionTitleSetText
          transform translateZ(0)

  .connectionTitleSet:hover
    svg
      opacity 0.5
      transition standardFast
      transform translateZ(0)

    svg:hover
      opacity 1

  .connectionExpandNetwork
    height 101px
    transition standard
    padding 31px 0px 31px 0px
    box-shadow 0px 4px 10px thick, 0px 5px 14px -2px thick !important

    .connectionTitleSetItems
      .connectionTitleSetItem
        pointer-events auto

.connectionOption
  width 100%
  align-items space-between
  transition standard
  border-radius 3px
  margin 0px -15px -15px -15px
  padding 0px 15px 15px 15px
  overflow hidden
  transform translateZ(0)

  .connectionOptionToggle
    width 100%
    display flex
    justify-content space-between
    align-items center
    height 25px
    transform translateZ(0)

  .connectionOptionDetails
    height 0px
    transition standard
    transition-delay 0ms, 0ms
    transition-property height, opacity
    opacity 0
    transform translateZ(0)

    .connectionOptionDetailsInset
      height 25px
      width 100%
      color outerspace08
      display flex
      justify-content space-between
      align-items center
      text-transform uppercase
      font-size 12px
      letter-spacing 1px
      font-weight 400
      margin 0px -15px -15px -15px
      padding 0px 15px 15px 15px

      .connectionOptionStatus
        display flex
        height 25px
        .connectionOptionStatusIndicator
          height 20px
          margin-top 5px
          margin-right 14px
          display flex
          align-items center
          div
            width 11px
            height 11px
            border-radius 5.5px
        .connectionOptionStatusIndicatorGood
          background good
        .connectionOptionStatusIndicatorBad
          background bad
        .connectionOptionStatusIndicatorPending
          background pending

        .connectionOptionStatusText
          height 20px
          margin-top 5px
          display flex
          align-items center

      .signerOptionSetWrap
        height 25px

      .signerOptionSet
        display flex
        height 21px
        margin-top 5px
        border-radius 10.5px
        letter-spacing 1px
        padding 0px 0px
        justify-content center
        align-items center
        padding 0px 3px 0px 3px
        background highlight
        box-shadow cardDrop

        .signerOptionSetButton
          display flex
          justify-content center
          align-items center
          height 20px
          width 25px
          border-radius 10px

          svg
            color outerspace
            opacity 0.3
            transition standardFast
            transform translateZ(0)

      .signerOptionSet:hover
        .signerOptionSetButton
          svg
            opacity 0.5

          svg:hover
            opacity 1

.appInfo
  position absolute
  bottom -68px
  left 0
  right 0
  font-size 14px
  font-weight 300
  transition standard
  transform translateZ(0)
  padding 15px

  .appInfoIcon
    transition standard
    height 30px
    display flex
    justify-content center
    align-items center
    flex-direction column
    transform translateZ(0)

    .appInfoHandle
      width 30px
      height 4px
      border-radius 2px
      background outerspace03
      transition standard
      transform translateZ(0)

  .appInfoLine
    margin-top -2px
    left 0
    right 0
    height 30px
    transition standard
    display flex
    justify-content center
    align-items center
    flex-direction column
    transform translateZ(0)
    color outerspace08

  .appInfoLineReset
    font-size 12px
    font-weight 600

    .appInfoLineResetConfirm
      span
        margin-left 5px

  .appInfoLineVersion
    font-family FiraCode, sans-serif

.appInfo:hover
  bottom 0px
  .appInfoIcon
    .appInfoHandle
      background outerspace01


.connectionCustomInput
  margin-top 0px
  margin-bottom 0px
  height 0px
  opacity 0
  position relative
  padding-top 0px
  transition standardFast
  background thin
  border-radius 3px
  transform translateZ(0)

  input
    position absolute
    top 0
    right 0
    bottom 0
    left 0px
    outline none
    border none
    width 100%
    text-align center
    font-family OpenSans, sans-serif
    font-size 16px
    background transparent
    padding 10px
    font-weight 200
    color outerspace

.connectionCustomInputOn
  margin-top 10px
  margin-bottom 2px
  height 35px
  opacity 1

.connectionOptionOn
  background lowlight
  margin -5px -15px
  padding 15px 15px
  .connectionOptionDetails
    height 25px
    opacity 1
    transition-delay 0ms, 30ms
    transition-property height, opacity
