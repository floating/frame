.signerSettings
  position absolute
  top 10px
  right 0
  bottom 0
  left 0
  transition var(--standard)
  transform translateZ(0)
  overflow hidden

  .signerSlide
    position absolute
    top 50px
    right 0
    left 0
    bottom 0
    transition var(--standard)
    padding-bottom 50px
    overflow-y scroll
    overflow-x hidden
    .signerSubslider
      width 1000%
      display flex
    .signerSubsliderSlide
      width 10%
    .signerSubsliderSlideMessage
      padding 20px
      display flex
      flex-direction column
      justify-content flex-start
      align-items center
      text-align center
    .renameAccountButtonWrap
      padding 10px
      display flex
      justify-content center
      align-items center
      text-align center


  .signerSettingsTitle:before
    content ''
    position absolute
    bottom -2px
    right 10px
    left 10px
    height 4px
    border-radius 2px
    background var(--thin)

  .signerSettingsTitle
    position relative
    display flex
    align-items flex-end
    justify-content space-between
    height 40px
    font-size 22px
    padding 0px 10px 10px 10px

.signerSettingsHidden
  left 100%
  right -100%

