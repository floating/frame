.localSettings
  position absolute
  top 0px
  right 0px
  bottom 0px
  left 0px
  display flex
  justify-content center
  padding 0px 0px 0px 0px
  flex-direction column
  transition standard

  .localSettingsTitle:before
    content ''
    position absolute
    bottom -2px
    right 10px
    left 10px
    height 4px
    border-radius 2px
    background thin

  .localSettingsTitle
    position relative
    display flex
    align-items flex-end
    height 60px
    font-size 24px
    padding 0px 10px 10px 10px

.localSettingsHidden
  right -100%
  left 100%

.signerSetting
  display flex
  justify-content center
  align-items center
  padding 0px 0px 20px 0px
  flex-direction column

.settingsTitle
  width 100%
  display flex
  justify-content center
  align-items center
  padding 20px 0px 20px 0px
  background rgba(255, 255, 255, 0.8)

.settingsItems
  width 100%
  display flex
  justify-content center
  align-items center
  padding 20px 0px 20px 0px
  background rgba(0,0,50,0.1)
  flex-direction column

.settingsItem
  width 100%
  display flex
  justify-content flex-start
  align-items center
  padding 20px

.quitFrame
  width 100%
  padding 20px

  .quitFrameButton
    width calc(100% - 40px)
    border-radius 20px
    height 40px
    background thin
    font-size 14px
    font-weight 400
    letter-spacing 2px
    text-transform uppercase
    display flex
    justify-content center
    align-items center

.connectionTitle
  display flex
  justify-content space-between
  align-items center
  height 25px
  .connectionTitleSet
    display flex
    height 25px
    border-radius 12.5px
    letter-spacing 1px
    padding 0px 15px
    font-weight 400
    justify-content center
    align-items center
    font-size 13px
    text-transform uppercase
    background rgba(245, 245, 255, 0.8)

.connectionOption
  // height 100px
  width 100%
  align-items space-between
  // flex-direction column
  transition standard
  border-radius 3px
  // margin 0px -15px
  // padding 0px 15px
  margin 0px -15px -15px -15px
  padding 0px 15px 15px 15px
  overflow hidden

  .connectionOptionToggle
    width 100%
    display flex
    justify-content space-between
    align-items center
    height 25px

  .connectionOptionDetails
    height 0px
    color outerspace08
    transition standard
    transition-delay 0ms, 0ms
    transition-property height, opacity
    display flex
    justify-content space-between
    align-items center
    text-transform uppercase
    opacity 0
    font-size 12px
    letter-spacing 1px
    font-weight 400

    .connectionOptionStatus
      display flex
      height 20px
      margin-top 5px
      .connectionOptionStatusIndicator
        height 20px
        margin-right 14px
        display flex
        align-items center
        div
          width 11px
          height 11px
          border-radius 5.5px
      .connectionOptionStatusIndicatorGood
        background good
      .connectionOptionStatusIndicatorBad
        background bad
      .connectionOptionStatusIndicatorPending
        background pending

      .connectionOptionStatusText
        // height 30px
        display flex
        align-items center

    .signerOptionSet
      display flex
      margin-top 5px
      height 20px
      // background outerspace08
      border-radius 10px
      letter-spacing 1px
      padding 0px 15px
      // font-weight bold
      justify-content center
      align-items center

      background rgba(245, 245, 255, 0.8)
      // box-shadow 0px 8px 8px -6px rgba(0,20,60,0.1), 0px 1px 2px 0px rgba(0,20,60,0.05)

.connectionOptionOn
  background rgba(245, 245, 255, 0.4)
  margin -5px -15px
  padding 15px 15px
  .connectionOptionDetails
    height 25px
    // background blue
    // padding-top 0px
    opacity 1
    transition-delay 0ms, 30ms
    transition-property height, opacity
    margin 0px -15px -15px -15px
    padding 0px 15px 15px 15px
