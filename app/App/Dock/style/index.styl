@keyframes hold {
  0% {
    transform rotate(-13deg) scale(1)
  }
  100% {
    transform rotate(-13deg) scale(1.2)
  }
}

@keyframes target {
  0% {
    transform scale(1)
    opacity 1
  }
  100% {
    transform scale(1.4)
    opacity 0
  }
}

@keyframes removal {
  0% {
    transform scale(1)
    opacity 1
  }
  100% {
    transform scale(1.7)
    opacity 0
  }
}

