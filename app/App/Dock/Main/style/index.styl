@import '../Signer/style'
@import '../PendingSigner/style'

#panelScroll
  position absolute
  top 0
  right 0
  bottom 0
  left 0px
  display flex
  justify-content center
  align-items center
  pointer-events auto

  #panelSlide
    max-height 100%
    width 100%
    overflow-y scroll
    overflow-x visible
    transition standardSlow
    // padding 50px 0px 50px 0px

  #panelSlide::-webkit-scrollbar
    display none

  #panelWrap
    width 100%
    padding-top 20px
    padding-bottom 0px
    will-change scroll-position
    padding 50px 0px 60px 0px

    .noSigners
      width 100%
      display flex
      justify-content center
      align-items center
      flex-direction column
      font-weight 200
      font-size 19px
      position relative
      z-index 10000000
      margin 60px 0px

      .introLogo
        padding-bottom 38px

        svg
          fill outerspace

      .getStarted
        margin-top 30px
        height 30px
        box-sizing border-box
        border-radius 15px
        padding 0px 40px 2px 40px
        display flex
        justify-content center
        align-items center
        font-size 14px
        font-weight 300
        background highlight
        transition standard
        box-shadow cardDrop

      .featureBox
        display flex
        justify-content center
        align-items center
        flex-direction column
        margin-top 30px

        .featureBoxText
          font-size 13px
          font-weight 400
          letter-spacing 4px

        .featureBoxSubtext
          margin-top 8px
          font-size 10px
          font-weight 500
          font-family FiraCode, monospace
          justify-content center
          letter-spacing 1px
          opacity 0.7

.signersSlide
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  z-index 6000
  pointer-events none

@import '../Add/style'
