// Transistions
standard = .24s cubic-bezier(.82,0,.12,1) all
standardSlow = .48s cubic-bezier(.82,0,.12,1) all

@keyframes bounceIn
  from, 20%, 40%, 60%, 80%, to
    animation-timing-function cubic-bezier(0.215, 0.61, 0.355, 1)
  0%
    opacity 0
    transform scale3d(0.3, 0.3, 0.3)
  20%
    transform scale3d(1.1, 1.1, 1.1)
  40%
    transform scale3d(0.9, 0.9, 0.9)
  60%
    opacity 1
    transform scale3d(1.03, 1.03, 1.03)
  80%
    transform scale3d(0.97, 0.97, 0.97)
  to
    opacity 1
    transform scale3d(1, 1, 1)

.bounceIn
  animation-duration 0.75s
  animation-name bounceIn

@keyframes load
  0%
    transform rotate(0deg)
  100%
    transform rotate(360deg)

.loader, .loader:after
  border-radius 50%
  width 7em
  height 7em

.loader
  font-size 10px
  position relative
  text-indent -9999em
  border-top 9px solid rgba(255, 255, 255, 0.05)
  border-right 9px solid rgba(255, 255, 255, 0.05)
  border-bottom 9px solid rgba(255, 255, 255, 0.05)
  border-left 9px solid rgba(255, 255, 255, 1)
  transform translateZ(0)
  animation load 1.1s infinite linear !important

@keyframes breathing
  0%
    transform scale(0.94)
  50%
    transform scale(1)
  100%
    transform scale(0.94)


