.slideUp-enter
  opacity 0
  transform scale(0.6)
  transition standard

.slideUp-enter.slideUp-enter-active
  opacity 1
  transform scale(1)
  transition standard
  // transition-delay 0.32s

.slideUp-leave
  opacity 1
  transition standard
  transform scale(1)

.slideUp-leave.slideUp-leave-active
  opacity 0
  transform scale(1.4)

.slideDown-enter
  opacity 0
  transform scale(1.4)
  transition standard

.slideDown-enter.slideDown-enter-active
  opacity 1
  transform scale(1)
  transition standard
  // transition-delay 0.32s

.slideDown-leave
  opacity 1
  transition standard
  transform scale(1)

.slideDown-leave.slideDown-leave-active
  opacity 0
  transform scale(0.6)

body
  background outerspace
  color spacewhite
  font-family OpenSans, sans-serif, FiraCode
  // text-shadow 0px 2px 0px rgba(0, 0, 0, 0.6)
  font-weight 200
  font-size 25px
  fill spacewhite
  overflow hidden
  margin 0
  padding 0

  .__restoreDevToolsExpand
    bottom 10px !important
    background rgba(255, 255, 255, 0.03) !important
    .__restoreDevToolsIcon
      background transparent !important
      fill spacewhite !important

  #dapp
    height 100%
    width 100%
    display flex
    justify-content center
    align-items center
    flex-direction column
    position relative
    overflow hidden
    // animation breathing 7s ease-out infinite normal
    // -webkit-font-smoothing antialiased

    #slide
      position absolute
      top 0
      right 0
      bottom 0
      left 0
      overflow hidden

      .slideWrap
        position absolute
        top 10%
        right 10%
        bottom 10%
        left 10%
        display flex
        justify-content center
        align-items center
        flex-direction column
        animation breathing 7s ease-in-out infinite normal
        will-change transform

      .defaultSlide
        display flex
        justify-content center
        // salign-items center
        flex-direction column
        // background blue
        // width 100%
        will-change transform
        max-width 850px

      .defaultTitle
        padding-bottom 20px
        padding-left 0px
        font-size 40px
        font-weight 300

      .defaultText
        padding 0px
        // font-weight 300
        padding-bottom 30px

      .titleSlide
        display flex
        justify-content center
        align-items center
        flex-direction column
        // background blue

      .logoTitle
        font-size 34px
        padding 50px 40px 30px 65px
        text-transform uppercase
        font-weight 300
        letter-spacing 25px
        font-family helvetica

      .connectionStatus
        height 120px
        width 120px
        margin-bottom 20px
        position relative

        .connectionStatusInner
          position absolute
          top 0
          right 0
          bottom 0
          left 0
          display flex
          justify-content center
          align-items center

          .check
            height 100px
            width 100px
            background blue
            display flex
            justify-content center
            align-items center
            border-radius 50px
            background rgba(255, 255, 255, 0.03)

    #slideIndex
      position absolute
      width 40px
      height 40px
      display flex
      justify-content center
      align-items center
      border-radius 20px
      background rgba(255, 255, 255, 0.03) !important
      left 10px
      top 13px
      font-weight 300
      font-size 20px

    .list
      padding-bottom 10px

      .listHead
        margin-left 25px

      .listItem
        margin-left 75px

    .listHead
      font-weight 300
      margin-left 0px
      margin-bottom 10px

    .listItem:before
      position absolute
      left -25px
      top 15px
      content ''
      height 4px
      width 4px
      border-radius 3px
      background spacewhite

    .listItem
      position relative
      margin-left 50px
      font-size 23px
      margin-bottom 20px


    .highlight
      font-weight 400
      // animation-duration 0.75s
      // animation-name bounceIn
      position relative
      display inline-block
      animation breathing2 7s ease-in-out infinite normal
      // padding 0px 5px 0px 5px

    .codeBox
      background rgba(255, 255, 255, 0.03)
      padding 45px 60px 45px 45px
      border-radius 6px
      font-family FiraCode
      font-weight 300
      font-size 23px
      will-change transform
      width 640px

      div
        height 30px
        display flex
        align-items center
        white-space nowrap

    .buttonWrap
      display flex
      cursor pointer

    .button
      margin 30px 10px 5px 10px
      display flex
      justify-content center
      align-items center
      background spacewhite
      color outerspace
      cursor pointer
      font-size 17px
      // text-transform uppercase
      font-weight 300
      width 250px
      height 44px
      border-radius 22px
      box-shadow 0px 10px 10px -10px rgba(0,0,0,0.8)
      transition standard

    .button:hover
      transform translateY(3px)
      box-shadow 0px 7px 7px -7px rgba(0,0,0,0.8)

    .button:active
      transform translateY(5px)
      box-shadow 0px 5px 5px -5px rgba(0,0,0,0.8)



