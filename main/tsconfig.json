{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "lib": ["es2021", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,

    "rootDir": ".",
    "outDir": "../compiled",
    "typeRoots": ["../node_modules/@types", "../@types"]
  },
  "include": ["./**/*.ts", "./**/*.js"],
  "exclude": ["**/__mocks__/*"],
  "references": [
    { "path": ".." }
  ]
}
