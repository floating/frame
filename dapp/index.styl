@keyframes load {
  0% {
    transform rotate(0deg)
  }
  100% {
    transform rotate(360deg)
  }
}

body
  width 100%
  height 100%
  margin 0
  padding 0px
  font-family OpenSans
  font-weight 300
  background light

  #frame
    width 100%
    height 100%
    padding 0px
    position relative

    .backdrop
      position absolute
      top 0px
      left 0px
      right 0px
      bottom 0px
      z-index 0
      border-radius 6px
      box-shadow cardDrop, 0px 0px 2px outerspace03
      pointer-events none

    .splash
      position absolute
      top 0px
      left 0px
      right 0px
      bottom 0px
      z-index 0
      pointer-events none
      background black

    .top
      position absolute
      top 0px
      left 0px
      right 0px
      height 37px
      z-index 50
      
      .break
        position absolute
        height 1px
        bottom 0px
        left 0
        right 0
        opacity 0.2
        background white
      
      .title
        position absolute
        top 0
        right 0
        left 0
        bottom 0
        z-index 1
        display flex
        justify-content center
        align-items center
        font-size 12px
        -webkit-app-region drag
        font-weight 300
        letter-spacing 1px
        pointer-events none
        user-select none
        font-family -apple-system, BlinkMacSystemFont, "Segoe UI", Ubuntu, Cantarell, "Oxygen Sans", "Helvetica Neue", sans-serif

      .menu
        position absolute
        top 0
        right 0px
        bottom 0
        width 85px
        z-index 3
        // background red

        .reload
          height 37px
          width 34px
          padding-top 1px
          position absolute
          top 0
          right 0
          bottom 0
          box-sizing border-box
          display flex
          justify-content center
          align-items center

        .reload:hover
          // color outerspace05
          // background green

    .shade
      position absolute
      top 37px
      left 0px
      right 0px
      bottom 0px
      transition var(--standard)
      z-index 150
      border-radius 6px
      // border-bottom-left-radius 4px
      // border-bottom-right-radius 4px
      // border-bottom-left-radius 4px
      // border-bottom-right-radius 4px
      border-bottom 2px solid outerspace05
      // border-top 2px solid thick
      box-shadow reverseCardDrop // , 0px 0px 4px rgba(10, 10, 40, 0.2)
      pointer-events none

    .webloading
      display none
      position absolute
      top 37px
      left 0px
      right 0px
      bottom 0px
      z-index 100
      transition var(--standard)
      border-radius 6px
      background linear-gradient(180deg, highlight 0%, thick 100%)
      display flex
      justify-content center
      align-items center
      // box-shadow reverseCardDrop, 0px 0px 4px rgba(25, 25, 50, 0.2)

      img
        position absolute
        max-height 40px
        max-width 40px

      .loader,
      .loader:after {
        border-radius 100%
        width 80px
        height 80px
      }
      .loader {
        font-size 7px
        position relative
        text-indent -9999em
        border-top 6px solid thin
        border-right 6px solid thin
        border-bottom 6px solid thin
        border-left 6px solid thick
        transform translateZ(0)
        animation load 0.6s infinite linear !important
      }

    .webwrap
      position absolute
      top 37px
      left 0px
      right 0px
      bottom 0px
      z-index 1000
      transition var(--standard)
      border-radius 6px

      .view
        position absolute
        top 0
        left 0
        right 0
        bottom 0
        border-radius 6px
        overflow hidden
        z-index 100

      view
        height 100%
        width 100%
