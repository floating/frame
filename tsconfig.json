{
  "compilerOptions": {
    "target": "es5",                     
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "rootDir": "main",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["jest"],
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"],
  "include": ["./main/**/*.tsx", "./main/**/*.ts"]
}
