html, body
  margin 0
  border 0
  font-family OpenSans
  font-weight 300
  -webkit-app-region no-drag
  overflow hidden
  color var(--outerspace)
  background var(--ghostY)

div
  user-select none
  cursor default

::-webkit-scrollbar
  width 0px
  background transparent


.dash
  width 100%
  height 100%
  overflow-y scroll
  overflow-x hidden
  background var(--ghostZ)

  .addAccounts
    position absolute
    top 100px
    left 0
    right 0
    bottom 0
    background var(--ghostB)
    z-index 4000
    overflow-y scroll
    overflow-x hidden

    .accountTypeSelect
      height 60px
      width 320px
      background var(--ghostD)
      border-radius 8px
      margin 20px
      display flex
      justify-content center
      align-items center
      cursor pointer

  .newAccount
    height 64px
    width 310px
    background var(--ghostB) // var(--ghostE) 0%, var(--ghostG) 70%)
    border-radius 12px
    display flex
    justify-content center
    align-items center
    margin 20px
    box-shadow 0px 9px 3px outerspace
    cursor pointer
    font-size 20px
    font-weight 100

  .signers
    width 100%
    height 100%

    // .signersTop
