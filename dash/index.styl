      // padding 4px
      
    .signersHeader
      height 40px
      width 100%
      display flex
      align-items center
      padding-left 8px
      padding-top 16px
      font-size 19px
      font-weight 100

    .noSigners
      position relative
      width 348px
      height 30px
      overflow hidden
      background var(--ghostC)
      box-sizing border-box
      margin 4px
      border-radius 8px
      display flex
      justify-content center
      align-items center
      font-size 12px
      font-weight 400
      text-transform uppercase

    .signersList
      display flex
      flex-wrap wrap

