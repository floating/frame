html, body
  margin 0
  border 0
  font-family OpenSans, sans-serif
  font-weight 300
  -webkit-app-region no-drag
  overflow hidden
  color var(--outerspace)
  background var(--ghostY)

div
  user-select none
  cursor default

::-webkit-scrollbar
  width 0px
  background transparent


.dash
  width 100%
  height 100%
  overflow-y scroll
  overflow-x hidden
  background var(--ghostA)
  position relative

  .dashMain
    position absolute 
    top 80px
    right 5px
    bottom 40px
    left 5px
    overflow-y scroll
    overflow-x hidden
    z-index 1000
    position absolute
    background var(--ghostZ)
    border-radius 16px

    .dashMainOverlay
      position absolute
      top 0px
      right 0px
      bottom 0px
      left 0px
      // background red
      border-radius 16px
      z-index 40000000
      box-shadow inset 0px 0px 6px var(--ghostY)
      pointer-events none

    .originTitle
      margin 30px 10px 5px 10px
      font-size 18px

    .clearOriginsButton
      background var(--ghostC)
      width 100%
      margin 10px
      height 48px
      border-radius 16px
      font-weight 500
      box-sizing border-box
      padding 13px
      text-align center
      margin-bottom 5px
      display flex
      justify-content center
      align-items center
      font-size 15px
      text-transform uppercase

    .clearOriginsButtonDisabled
      opacity 0.5

  .panelScrollOverlay
    position absolute
    top 0px
    right 0px
    bottom 0px
    left 0px
    // background red
    border-radius 16px
    z-index 40000000
    box-shadow inset 0px 0px 6px var(--ghostX)
    pointer-events none

  .addAccounts
    position absolute
    top 0px
    left 0
    right 0
    bottom 0
    background var(--ghostZ)
    z-index 4000
    overflow-y scroll
    overflow-x hidden
    padding-bottom 60px

    .addAccountsHeader
      .addAccountsHeaderTitle
        margin-top 20px
        margin-bottom 20px
        font-size 14px
        font-weight 300
        height 50px
        display flex
        justify-content center
        align-items center

      .addAccountsHeaderClose
        position absolute
        top 18px
        right 10px
        border-radius 8px
        cursor pointer
        background var(--ghostB)
        width 90px
        height 30px
        display flex
        justify-content center
        align-items center
        text-transform uppercase
        font-size 11px
        letter-spacing 1px
        font-weight 600
        padding-bottom 1px
        padding-left 1px
        display none

        *
          pointer-events none

      .addAccountsHeaderClose:hover
        background var(--ghostC)

    .accountTypeSelect
      height 90px
      // width 320px
      font-weight 300
      border-radius 12px
      margin 6px 6px 8px 6px
      display flex
      justify-content center
      align-items center
      cursor pointer
      background var(--ghostA)
      // border-bottom 2px solid var(--ghostZ)
      box-shadow 0px 4px 8px var(--ghostY)
      font-size 16px

      .accountTypeSelectIcon
        margin-right 12px

    .accountTypeSelect:hover
      //transform translateY(-1px)
      background var(--ghostB)
      // color var(--good)
      // animation 5s shake ease-in-out infinite alternate

    // .accountTypeSelect:active
    //   color var(--good)
    //   transform translateY(2px)
    //   animation shake-little 2s ease-in-out infinite
    //   box-shadow 0px 2px 12px 0px var(--ghostY)

  .newAccount
    height 60px
    position relative
    background var(--ghostA)
    border-radius 12px
    display flex
    justify-content center
    align-items center
    margin 6px 6px 64px 6px
    cursor pointer
    font-size 16px
    // border-bottom 2px solid var(--ghostZ)
    box-shadow 0px 4px 8px var(--ghostY)
    padding-top 0px
    padding-left 30px
    padding-bottom 1px
    box-sizing border-box
    letter-spacing 1px
    color var(--outerspace)
    font-family 'Exo2', OpenSans, sans-serif
    font-weight 400
    transform rotate(0.0001deg)
    z-index 5

    .newAccountIcon
      position absolute
      top 0
      left 0
      bottom 0px
      width 64px
      font-size 28px
      display flex
      justify-content center
      align-items center
      font-weight 200
    
  .newAccount:hover
    background var(--ghostB)
    // transform translateY(-1px)
    // color var(--good)
    // animation 5s shake ease-in-out infinite alternate

