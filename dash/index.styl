html, body
  margin 0
  border 0
  font-family OpenSans, sans-serif
  font-weight 300
  -webkit-app-region no-drag
  overflow hidden
  color var(--outerspace)
  background var(--ghostY)

div
  user-select none
  cursor default

::-webkit-scrollbar
  width 0px
  background transparent


.dash
  width 100%
  height 100%
  overflow-y scroll
  overflow-x hidden
  background var(--ghostA)
  position relative

  .dashMain
    position absolute 
    top 80px
    right 5px
    bottom 40px
    left 5px
    z-index 1000
    background var(--ghostZ)
    border-radius 16px
    padding-bottom 20px

    .dashMainScroll
      position absolute 
      top 0px
      right 0px
      bottom 0px
      left 0px
      z-index 2000
      overflow-y scroll
      overflow-x hidden

    .dashMainOverlay
      position absolute
      top 0px
      right 0px
      bottom 0px
      left 0px
      border-radius 16px
      z-index 40000000
      box-shadow inset 0px 0px 6px var(--ghostY)
      pointer-events none

    .originTitle
      margin 30px 8px 5px 0px
      font-size 18px
      display flex
      align-items center

      .originTitleIcon
        margin 9px 16px

      .originTitleText
        margin-top -2px

    .clearOriginsButton
      background var(--ghostA)
      margin 74px 6px 6px 6px
      height 48px
      border-radius 12px
      font-weight 500
      box-sizing border-box
      padding 13px
      text-align center
      margin-bottom 5px
      display flex
      justify-content center
      align-items center
      font-size 13px
      text-transform uppercase
      cursor pointer
      box-shadow 0px 2px 4px var(--ghostY)

    .clearOriginsButton:hover
      background var(--ghostB)

  .panelScrollOverlay
    position absolute
    top 0px
    right 0px
    bottom 0px
    left 0px
    // background red
    border-radius 16px
    z-index 40000000
    box-shadow inset 0px 0px 6px var(--ghostX)
    pointer-events none

  .addAccounts
    position absolute
    top 0px
    left 0
    right 0
    bottom 0
    background var(--ghostZ)
    z-index 4000
    overflow-y scroll
    overflow-x hidden
    padding-bottom 60px

    .addAccountsHeader
      .addAccountsHeaderTitle
        margin-top 20px
        margin-bottom 20px
        font-size 14px
        font-weight 300
        height 50px
        display flex
        justify-content center
        align-items center

      .addAccountsHeaderClose
        position absolute
        top 18px
        right 10px
        border-radius 8px
        cursor pointer
        background var(--ghostB)
        width 90px
        height 30px
        display flex
        justify-content center
        align-items center
        text-transform uppercase
        font-size 11px
        letter-spacing 1px
        font-weight 600
        padding-bottom 1px
        padding-left 1px
        display none

        *
          pointer-events none

      .addAccountsHeaderClose:hover
        background var(--ghostC)

    .accountTypeSelect
      height 100px
      font-weight 300
      border-radius 12px
      margin 6px 6px 8px 6px
      display flex
      justify-content center
      align-items center
      cursor pointer
      background var(--ghostA)
      box-shadow 0px 4px 8px var(--ghostY)
      font-size 16px

      .accountTypeSelectIcon
        margin-right 12px

    .accountTypeSelect:hover
      background var(--ghostB)

  .newAccount
    height 60px
    position relative
    background var(--ghostA)
    border-radius 12px
    display flex
    justify-content center
    align-items center
    margin 6px 6px 64px 6px
    cursor pointer
    font-size 16px
    box-shadow 0px 4px 8px var(--ghostY)
    padding-top 0px
    padding-left 30px
    padding-bottom 1px
    box-sizing border-box
    letter-spacing 1px
    color var(--outerspace)
    font-family 'Exo2', OpenSans, sans-serif
    font-weight 400
    transform rotate(0.0001deg)
    z-index 5

    .newAccountIcon
      position absolute
      top 0
      left 0
      bottom 0px
      width 64px
      font-size 28px
      display flex
      justify-content center
      align-items center
      font-weight 200
    
  .newAccount:hover
    background var(--ghostB)

  .signers
    width 100%

    // .signersTop
    //   position absolute
    //   top 0
    //   right 0
    //   left 0
    //   background var(--ghostA)
    //   height 40px
    //   display none

    // .signersMid
      // position absolute
      // top 0px
      // right 0
      // left 0
      // bottom 0px
      // overflow-x hidden
      // overflow-y scroll
      // padding 4px
      
    .signersHeader
      width calc(100% - 32px)
      display flex
      justify-content center
      align-items center
      position relative
      height 32px
      margin 0px 16px 12px 16px
      box-sizing border-box
      font-size 12px
      text-transform uppercase
      letter-spacing 1px
      font-weight 400


    .noSigners
      position relative
      width 100%
      height 48px
      overflow hidden
      background var(--ghostA)
      box-sizing border-box
      margin 0px 0px 40px 0px
      border-radius 12px
      display flex
      justify-content center
      align-items center
      font-size 11px
      font-weight 400
      letter-spacing 2px
      text-transform uppercase
      box-shadow 0px 4px 8px var(--ghostY)

    .signersList
      display flex
      flex-wrap wrap
      padding 0px 6px 0px 6px

