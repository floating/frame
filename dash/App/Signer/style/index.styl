.signer
  position relative
  width 100%
  // height 300px
  overflow hidden
  background var(--ghostA)
  box-sizing border-box
  margin 3px 0px 40px 0px
  border-radius 16px

  .signerTop
    position relative
    height 62px


  .signerIcon
    position absolute
    top 20px
    left 18px

  .signerName
    position absolute
    top 16px
    left 48px
    height 28px
    padding 0px 7px
    border-radius 8px
    font-size 20px
    display flex
    align-items center
    box-sizing border-box
    font-weight 400
    font-family 'Exo2', sans-serif
    text-transform capitalize
    letter-spacing 0px

    .signerNameUpdate
      position absolute
      width 28px
      height 28px
      // background red
      right -34px
      color var(--good)
      display flex
      align-items center
      cursor pointer
      pointer-events none
      opacity 0
      *
        pointer-events none

  .signerNameFocused
    background var(--ghostZ)
    .signerNameUpdate
      opacity 1
      
  .signerType
    // position absolute
    // top 6px
    // left 10px
    // font-size 12px
    // text-transform uppercase
    // font-weight 400
    position absolute
    top 20px
    right 44px
    font-size 11px
    text-transform uppercase
    font-weight 400
    letter-spacing 0px

  // .signerStatus
  //   position absolute
  //   top 8px
  //   right 8px
