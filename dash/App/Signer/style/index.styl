  //   font-weight 400

  .signerStatusIndicator
    position absolute
    top 27px
    right 18px
    font-size 12px
    text-transform uppercase
    font-weight 400
    background var(--ghostZ)
    width 10px
    height 10px
    border-radius 5px
    // box-shadow 0px 0px 5px bleu

  .signerStatusIndicatorLocked
    background var(--moon)

  .signerStatusIndicatorReady
    background var(--good)

  .signerStatusText
    padding 8px 32px
    margin 0px 8px 8px 8px
    border-radius 8px
    font-size 12px
    text-transform uppercase
    text-align center
    font-weight 600
    letter-spacing 0px
    border 1px solid var(--ghostY)
    color var(--outerspace)

  .signerStatusError
    color var(--bad)

  .signerStatusIssue
    color var(--moon)

  .signerStatusReady
    color var(--good)

  .signerBottom
    left 0
    right 0
    bottom 0
    height 20px
    display flex
    justify-content space-between
    align-items center
    font-size 14px
    font-weight 300
    display flex
    justify-content center
    align-items center
    padding 8px 16px 10px 16px

    .signerBottomPages
      border-radius 8px
      font-size 12px
      font-weight 400
      width 56px
      text-align center

    .signerBottomPageBack
      background var(--ghostB)
      padding 2px 1px 2px 2px
      height 24px
      width 24px
      border-radius 12px
      cursor pointer
      box-sizing border-box
      *
        pointer-events none

    .signerBottomPageNext
      background var(--ghostB)
      transform rotate(180deg)
      padding 2px 2px 2px 1px
      height 24px
      width 24px
      border-radius 12px
      cursor pointer
      box-sizing border-box
      *
        pointer-events none

  .signerDrawer
    position relative
    height 46px

    .showControls
      position absolute
      height 20px
      border-radius 12px
      border 1px solid var(--ghostZ)
      background var(--ghostA)
      z-index 2
      top 9px
      left 50%
      width 100px
      margin-left -50px
      padding-bottom 2px
      letter-spacing 1px
      font-size 11px
      display flex
      justify-content center
      align-items center
      text-transform uppercase
      cursor pointer
      color var(--outerspace03)
      transition var(--standardFast)
      font-weight 400

    .showControls:hover
      background var(--ghostC)
      color var(--outerspace)

    .showControlsLine
      height 1px
      position absolute 
      top 50%
      left 0
      right 0
      background var(--ghostZ)
      z-index 1
      margin-top -3px

  .signerControls
    padding-top 10px

    .signerControlDetail
      height 40px
      margin 0px 10px 11px 10px
      display flex
      justify-content center
      align-items center
      box-sizing border-box
      font-size 16px
      font-weight 400
      border 2px solid var(--ghostA)
      border-radius 9px

      .signerControlDetailKey
        font-size 11px
        margin 4px 4px 6px 4px
        letter-spacing 1px

      .signerControlDetailValue
        margin 4px
        font-family 'Fira Code', monospace

    .signerControlOption
      height 40px
      margin 0px 10px 11px 10px
      background var(--ghostB)
      border-radius 9px
      color var(--outerspace)
      display flex
      justify-content center
      align-items center
      font-weight 400
      font-size 13px
      cursor pointer
      letter-spacing 0px
      box-sizing border-box
      text-transform uppercase
      box-shadow 0px 2px 2px var(--ghostA)

      *
        pointer-events none

    .signerControlOption:hover
      background var(--ghostC)
      box-shadow 0px 4px 6px var(--ghostA)

    // .signerControlOption
