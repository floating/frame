@keyframes headShake
  0%
    transform translateX(0)
  6.5%
    transform translateX(-6px) rotateY(-9deg)
  18.5%
    transform translateX(5px) rotateY(7deg)
  31.5%
    transform translateX(-3px) rotateY(-5deg)
  43.5%
    transform translateX(2px) rotateY(3deg)
  50%
    transform translateX(0)

@keyframes fadeInDown
  0%
    opacity 0
    transform translate3d(0, -20px, 0)
  100%
    opacity 1
    transform translate3d(0, 0, 0)

.signerStatus
  position absolute
  z-index 20000000000
  top 58px
  left 5px
  right 5px
  pointer-events auto

  .signerStatusWrap
    position relative
    width 100%
    height 100%
    animation-name fadeInDown
    animation-duration 400ms
    animation-timing-function cubic-bezier(.82,0,.12,1)

  .signerStatusTop
    position relative
    height 10px

    .signerStatusTopArrow
      background var(--ghostD)
      width 20px
      height 20px 
      border-top-left-radius 3px
      transform rotate(45deg)
      position absolute
      top 0px
      left 24px
      box-shadow -4px -4px 6px -2px var(--ghostA) // , 0px 10px 20px var(--ghostZ)

  .signerStatusMain
    background var(--ghostB)
    border-radius 8px
    box-shadow 0px 0px 10px var(--ghostZ), 0px 10px 20px var(--ghostZ)
    padding 20px

.signerStatusHidden
  transform translateY(-40px)
  opacity 0
  pointer-events none

.signerUnlockWrap
  display flex
  align-items center
  flex-direction column
  transform translateY(0px)
  width 100%

  .signerUnlockHeader
    padding-bottom 20px
    text-transform uppercase
    font-size 12px
    font-weight 400

  .signerUnlockInput
    height 40px
    width 100%
    padding-bottom 0px
    border 0
    outline 0
    background var(--ghostD)
    font-size 24px
    letter-spacing 6px
    display flex
    justify-content center
    align-items center
    text-align center
    border-radius 22px
    color var(--outerspace08)
    box-shadow 0px 1px 1px var(--ghostA), inset 0px 1px 1px var(--ghostA)
    text-shadow 0px 2px 2px var(--ghostA)
    border 2px solid var(--moon)
    color var(--moon)

  .signerUnlockSubmit
    height 30px
    background var(--ghostF)
    color var(--outerspace)
    font-size 12px
    margin 12px 0px 0px 0px
    width 140px
    border-radius 15px
    display flex
    justify-content center
    align-items center
    font-weight 600
    cursor pointer
    text-transform uppercase

    *
      pointer-events none

  .signerUnlockSubmit:hover
    background var(--moon)
    color var(--moonOver)
    animation 5s shake ease-in-out infinite alternate
    box-shadow 0px 5px 15px 0px var(--ghostB)

  .signerUnlockSubmit:active
    transform translateY(0px)
    animation shake-little 2s ease-in-out infinite
    box-shadow 0px 4px 6px 0px var(--ghostB)

.headShake
  animation-duration 1s
  animation-fill-mode both
  animation-timing-function ease-in-out
  animation-name headShake
  transform translateZ(0)