.cluster
  font-size 17px
  font-weight 400
  border-radius 20px
  -webkit-app-region no-drag
  transition none
  transform translate3d(0, 0, 0)
  font-family 'MainFont'
  display flow-root
  background var(--ghostZ)
  margin 6px
  padding 2px 0px 1px 0px

  .clusterRow
    display flex
    justify-content center
    align-items stretch
    font-weight 300
    margin-left 3px

    .clusterValue
      flex-grow 1
      display flex
      justify-content center
      align-items center
      border-radius 12px
      background var(--ghostA)
      margin-right 3px
      font-size 14px
      display flex
      justify-content center
      align-items center
      border-radius 8px
      -webkit-app-region no-drag
      transition none
      transform translate3d(0, 0, 0)
      font-family 'MainFont'
      background var(--ghostA)
      box-shadow 0px 1px 2px var(--ghostX)
      border-bottom 2px solid var(--ghostZ)
      overflow hidden
      margin-top 1px
      
      svg
        position relative
        top -0px
        padding 0px 3px 0px 4px

      *
        pointer-events none

    .clusterValueClickable
      transition all linear 0.1s
      cursor pointer
      margin-bottom 0px
      position relative
      z-index 3

    .clusterValueInteractable
      *
        pointer-events auto

    .clusterValueClickable:hover
      background var(--ghostB)
      transform translateY(-1px)
      border-bottom 2px solid var(--ghostZ)
      box-shadow 0px 4px 30px -8px var(--ghostX)
      position relative
      z-index 300000
    
    .clusterValueClickable:active
      background var(--ghostB)
      transform translateY(0px)
      box-shadow 0px 2px 4px var(--ghostX)

  .clusterRow:first-child
    .clusterValue
      border-radius 8px
    .clusterValue:first-child
      border-top-left-radius 18px
    .clusterValue:last-child
      border-top-right-radius 18px

  .clusterRow:last-child
    .clusterValue
      border-radius 8px
    .clusterValue:first-child
      border-bottom-left-radius 18px
    .clusterValue:last-child
      border-bottom-right-radius 18px

    .clusterColumn
      display flex
      flex-direction column
      flex-grow 1
      font-size 14px
      align-items stretch

    .clusterColumn:first-child
      .clusterValue
        border-radius 8px
      .clusterValue:first-child
        border-top-left-radius 18px
      .clusterValue:last-child
        border-bottom-left-radius 18px
        
    .clusterColumn:last-child
      .clusterValue
        border-radius 8px
      .clusterValue:first-child
        border-top-right-radius 18px
      .clusterValue:last-child
        border-bottom-right-radius 18px

.clusterTag
  text-transform uppercase
  font-size 11px
  font-weight 500
  padding 8px

.clusterAddress
  padding 12px
  font-size 14px
  font-weight 600
  cursor pointer

.clusterAddressRecipient
  font-size 16px
  font-weight 300
  font-family 'FiraCode'
  display flex
  justify-content center
  align-items center
  pointer-events none
  
  svg
    padding 0px 4px !important

.clusterAddressRecipientFull
  position absolute 
  top 0
  left 0
  bottom 0px
  right 0
  padding-bottom 1px
  display flex
  justify-content center
  align-items center
  cursor pointer
  z-index 40000
  border-radius 8px
  font-weight 500
  background var(--ghostB)
  opacity 0
  z-index 4
  box-shadow 0px 4px 4px var(--ghostZ)
  transition 0.05s linear all

.clusterFira
  position relative
  top 1.5px
  left 1px
  font-weight 300
  font-size 13px 
  font-family 'FiraCode'

.clusterAddressRecipientFull:hover
  opacity 1
  transform translateX(0px) scale(1)
