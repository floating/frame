.ringIcon
  height 33px
  width 33px
  border-radius 23px
  position relative
  -webkit-app-region no-drag
  transition none
  pointer-events auto
  transform translate3d(0, 0, 0)
  border 2px solid var(--outerspace)
  background var(--ghostB)
  *
    pointer-events none

  .ringIconInner
    position absolute
    top 3px
    right 3px
    bottom 3px
    left 3px
    border-radius 18px
    display flex
    justify-content center
    align-items center
    background var(--outerspace)
    overflow hidden
    color var(--ghostB)

    img
      object-fit cover
      max-height 31px
      min-height 31px
      max-width 31px
      min-width 31px
      border-radius 16px

.ringIconSmall
  height 23px
  width 23px

  .ringIconInner
    position absolute
    top 2px
    right 2px
    bottom 2px
    left 2px
    img
      object-fit cover
      max-height 19px
      min-height 19px
      max-width 19px
      min-width 19px
      border-radius 10px

